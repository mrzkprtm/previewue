---
/**
 * OWNER: DYNAMIC (Dev B)
 * Popular Topics Section for Blog Archive
 */
import type { WPCategory } from "../../types/wp";

interface Props {
    categories?: WPCategory[];
}

// Static categories with icons for now (can be dynamic from WP)
const defaultCategories = [
    { name: "IELTS", slug: "ielts", icon: "school", color: "amber" },
    { name: "Beasiswa", slug: "beasiswa", icon: "workspace_premium", color: "indigo" },
    { name: "Tips Belajar", slug: "tips-belajar", icon: "lightbulb", color: "pink" },
    { name: "Study Abroad", slug: "study-abroad", icon: "flight_takeoff", color: "emerald" },
    { name: "TOEFL", slug: "toefl", icon: "menu_book", color: "orange" },
];

const { categories } = Astro.props;
const displayCategories = categories?.length ? categories : defaultCategories;

const colorClasses: Record<string, { bg: string; text: string }> = {
    amber: { bg: "bg-amber-100", text: "text-amber-500" },
    indigo: { bg: "bg-indigo-100", text: "text-indigo-500" },
    pink: { bg: "bg-pink-100", text: "text-pink-500" },
    emerald: { bg: "bg-emerald-100", text: "text-emerald-500" },
    orange: { bg: "bg-orange-100", text: "text-orange-500" },
    blue: { bg: "bg-blue-100", text: "text-blue-500" },
};
---

<section class="mt-16">
    <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 font-heading">Topik Populer</h2>
        <div class="flex gap-2">
            <button class="p-3 bg-white rounded-full text-slate-300 hover:text-primary transition-colors shadow-sm border border-slate-100" aria-label="Previous topics">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            <button class="p-3 bg-primary rounded-full text-white shadow-lg shadow-primary/30" aria-label="Next topics">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </div>

    <div class="bg-white p-6 md:p-8 rounded-3xl shadow-card">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-6 md:gap-8">
            {
                defaultCategories.map((category, index) => {
                    const colors = colorClasses[category.color] || colorClasses.blue;
                    return (
                        <a href={`/artikel/category/${category.slug}`} class="flex flex-col items-center gap-4 group cursor-pointer">
                            <div class={`category-icon-wrapper w-16 h-16 md:w-20 md:h-20 ${colors.bg} rounded-2xl flex items-center justify-center ${colors.text} transition-transform hover:-translate-y-1`}>
                                <svg class="w-8 h-8 md:w-10 md:h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    {category.icon === "school" && (
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                                        />
                                    )}
                                    {category.icon === "workspace_premium" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                                    )}
                                    {category.icon === "lightbulb" && (
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                        />
                                    )}
                                    {category.icon === "flight_takeoff" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3l14 9-14 9V3z" />}
                                    {category.icon === "menu_book" && (
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                                        />
                                    )}
                                </svg>
                            </div>
                            <span class="font-bold text-slate-600 group-hover:text-primary transition-colors text-center text-sm md:text-base">{category.name}</span>
                        </a>
                    );
                })
            }
        </div>
    </div>
</section>
