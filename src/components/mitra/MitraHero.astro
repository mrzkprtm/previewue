<section class="relative pt-32 pb-20 bg-hero-gradient overflow-hidden">
    <!-- Decorative element -->
    <!-- Hero Decoration (Image & Semi-circle) -->
    <div
        class="absolute inset-y-0 right-0 hidden lg:flex flex-col items-center justify-end h-full w-[40%] pointer-events-none z-10 pr-0 xl:pr-10"
    >
        <!-- Semi-circle background -->
        <div
            class="absolute bottom-0 w-[48%] h-auto aspect-[2/1] bg-ultimate-yellow rounded-t-full left-1/2 -translate-x-1/2 z-0"
        >
        </div>
        <!-- Hero Image Overlay -->
        <img
            src="/images/hero_img.png"
            alt="Hero Decoration"
            class="relative z-10 h-[70%] w-auto object-contain object-bottom"
        />
    </div>

    <!-- Background Patterns -->
    <div
        class="absolute inset-0 opacity-20 pointer-events-none z-0"
        style="background-image: url('/images/pattern_2.svg'); background-size: 100% 100%; background-position: left center;"
    >
    </div>
    <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20 text-center"
    >
        <div
            class="inline-block px-4 py-1.5 rounded-full bg-white/10 border border-white/20 text-ultimate-yellow text-sm font-semibold mb-6 animate-float"
        >
            Program Kemitraan Eksklusif
        </div>
        <h1
            class="font-heading font-extrabold text-white text-4xl md:text-6xl mb-6 leading-tight"
        >
            Wujudkan Penghasilan <br />
            <span class="text-ultimate-yellow">Puluhan Juta</span> dari Rumah
        </h1>
        <p
            class="text-slate-300 text-lg md:text-xl max-w-2xl mx-auto mb-10 leading-relaxed font-light"
        >
            Cukup bagikan link referral, tanpa modal! Yuk, jadi <span
                class="text-white font-semibold">#MitraUltimate</span
            > sekarang dan nikmati keuntungannya.
        </p>
        <div
            class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
            <button
                class="px-8 py-4 bg-ultimate-yellow text-ultimate-navy font-bold rounded-full hover:bg-yellow-500 transition-all shadow-lg transform hover:-translate-y-1 text-lg flex items-center gap-2"
            >
                Chat via WhatsApp
                <span class="material-symbols-outlined">chat</span>
            </button>
        </div>
    </div>
</section>
