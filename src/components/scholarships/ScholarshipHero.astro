<section class="relative pb-20 bg-hero-gradient overflow-hidden">
    <!-- Decorative element -->
    <!-- Hero Decoration (Image & Semi-circle) -->
    <div class="absolute inset-y-0 right-0 hidden lg:flex flex-col items-center justify-end h-full w-[40%] pointer-events-none z-10 pr-0 xl:pr-10">
        <!-- Semi-circle background -->
        <div class="absolute bottom-0 w-[48%] h-auto aspect-[2/1] bg-ultimate-yellow rounded-t-full left-1/2 -translate-x-1/2 z-0"></div>
        <!-- Hero Image Overlay -->
        <img src="/images/hero_img.png" alt="Hero Decoration" class="relative z-10 h-[70%] w-auto object-contain object-bottom" />
    </div>

    <!-- Background Patterns -->
    <div class="absolute inset-0 opacity-20 pointer-events-none z-0" style="background-image: url('/images/pattern_2.svg'); background-size: 100% 100%; background-position: left center;"></div>

    <div class="container mx-auto px-6 relative z-20 text-center">
        <div class="inline-block px-4 py-1.5 rounded-full bg-white/10 border border-white/20 text-ultimate-yellow text-base font-semibold mb-6 animate-float">Info Beasiswa Terlengkap</div>
        <h1 class="font-heading font-bold text-white text-3xl md:text-5xl mb-6">Raih Beasiswa Impianmu</h1>
        <p class="text-slate-300 text-lg max-w-2xl mx-auto mb-10">Temukan ribuan peluang beasiswa S1, S2, dan S3 dari universitas terbaik di seluruh dunia bersama Ultimate Education.</p>

        <!-- Search & Filter bar -->
        <div class="bg-white dark:bg-slate-800 p-4 rounded-2xl shadow-xl max-w-4xl mx-auto flex flex-col md:flex-row gap-4 items-center">
            <div class="flex-1 w-full relative">
                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">search</span>
                <input
                    class="w-full pl-10 pr-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-ultimate-blue outline-none"
                    placeholder="Cari nama beasiswa..."
                    type="text"
                />
            </div>
            <div class="w-full md:w-48">
                <select class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-ultimate-blue outline-none cursor-pointer">
                    <option value="">Semua Negara</option>
                    <option value="uk">United Kingdom</option>
                    <option value="us">USA</option>
                    <option value="aus">Australia</option>
                    <option value="jp">Japan</option>
                </select>
            </div>
            <div class="w-full md:w-48">
                <select class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-slate-700 dark:text-white focus:ring-2 focus:ring-ultimate-blue outline-none cursor-pointer">
                    <option value="">Jenjang Studi</option>
                    <option value="s1">Bachelor (S1)</option>
                    <option value="s2">Master (S2)</option>
                    <option value="s3">PhD (S3)</option>
                </select>
            </div>
            <button class="w-full md:w-auto px-8 py-3 bg-ultimate-yellow text-ultimate-navy font-bold rounded-xl hover:bg-yellow-500 transition-colors flex items-center justify-center gap-2">
                <span class="material-symbols-outlined">filter_list</span>
                Filter
            </button>
        </div>
    </div>
</section>
