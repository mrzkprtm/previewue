---
interface Props {
    programName: string;
    price: string | undefined;
}

const { programName, price = "Hubungi Kami" } = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <span class="text-ultimate-blue font-bold tracking-widest uppercase text-sm mb-2 block">Investment</span>
            <h2 class="text-3xl md:text-4xl font-bold font-heading text-ultimate-navy">Pilihan Paket Belajar</h2>
            <p class="text-slate-500 mt-4 max-w-2xl mx-auto">Pilih paket yang paling sesuai dengan target dan kebutuhan belajarmu.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto items-center">
            <!-- Regular -->
            <div class="bg-white p-8 rounded-3xl border border-slate-200 hover:shadow-xl transition-all duration-300 relative group">
                <h3 class="text-xl font-bold text-ultimate-navy mb-2">Regular</h3>
                <p class="text-slate-500 text-sm mb-6">Untuk pemahaman dasar yang kuat.</p>
                <div class="mb-6">
                    <span class="text-3xl font-black text-slate-800">Basic</span>
                </div>
                <ul class="space-y-4 mb-8 text-sm text-slate-600">
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Video Materi Lengkap
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>2x Tryout Asli
                    </li>
                    <li class="flex items-center gap-3 text-slate-400">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>Bank Soal Terbatas
                    </li>
                </ul>
                <a href="#" class="block w-full py-3 rounded-xl border-2 border-slate-200 text-slate-600 font-bold text-center hover:border-ultimate-navy hover:text-ultimate-navy transition-colors">Pilih Regular</a>
            </div>

            <!-- Intensive (Highlighted) -->
            <div class="bg-ultimate-navy p-8 rounded-3xl border border-ultimate-navy shadow-2xl relative transform md:-translate-y-4 z-10">
                <div class="absolute top-0 right-0 bg-ultimate-yellow text-ultimate-navy text-xs font-bold px-3 py-1 rounded-bl-xl rounded-tr-xl uppercase tracking-wider">Most Popular</div>
                <h3 class="text-xl font-bold text-white mb-2">{programName} Intensive</h3>
                <p class="text-blue-200 text-sm mb-6">Persiapan total dengan Live Mentoring.</p>
                <div class="mb-6">
                    <span class="text-4xl font-black text-white">{price}</span>
                </div>
                <ul class="space-y-4 mb-8 text-sm text-blue-50">
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-ultimate-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Semua Fitur
                        Regular
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-ultimate-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>20x Bimbingan
                        Live/Zoom
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-ultimate-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Bank Soal Premium
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-ultimate-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Konsultasi Jurusan
                    </li>
                </ul>
                <a
                    href="https://api.whatsapp.com/send/?phone=6283812310368"
                    target="_blank"
                    class="block w-full py-4 rounded-xl bg-ultimate-blue text-white font-bold text-center hover:bg-white hover:text-ultimate-navy transition-colors shadow-lg">Pilih Intensive</a
                >
            </div>

            <!-- Elite -->
            <div class="bg-white p-8 rounded-3xl border border-slate-200 hover:shadow-xl transition-all duration-300 relative group">
                <h3 class="text-xl font-bold text-ultimate-navy mb-2">Elite Private</h3>
                <p class="text-slate-500 text-sm mb-6">Bimbingan eksklusif 1-on-1.</p>
                <div class="mb-6">
                    <span class="text-3xl font-black text-slate-800">Custom</span>
                </div>
                <ul class="space-y-4 mb-8 text-sm text-slate-600">
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Semua Fitur Intensive
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Privat Mentor 1-on-1
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Jadwal Fleksibel
                    </li>
                    <li class="flex items-center gap-3">
                        <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Jaminan Lolouse/Skor*
                    </li>
                </ul>
                <a href="#" class="block w-full py-3 rounded-xl border-2 border-slate-200 text-slate-600 font-bold text-center hover:border-ultimate-navy hover:text-ultimate-navy transition-colors">Pilih Elite</a>
            </div>
        </div>
    </div>
</section>
