---
interface Props {
    programName: string;
}

const { programName } = Astro.props;

const painPoints = [
    {
        title: "Materi Menumpuk & Bingung Mulai Dari Mana",
        desc: "Terlalu banyak buku dan materi sekolah membautmu kewalahan mengatur prioritas belajar.",
    },
    {
        title: "Habis Waktu Mengerjakan Satu Soal",
        desc: "Belum materi lagi sering kehabisan waktu saat ujian karena cara pengerjaan yang tidak efektif.",
    },
    {
        title: "Kurang Fokus & Mudah Terdistraksi",
        desc: "Belajar sendiri seringkali tidak disiplin dan gampang tergoda main HP atau kegiatan lain.",
    },
];

const solutions = [
    {
        title: "Kurikulum Terstruktur & Personal",
        desc: "Panduan belajar step-by-step yang disesuaikan dengan kemampuan awalmu, jadi tidak pusing atur rencana.",
    },
    {
        title: "Trik Cepat Logis (The FAST Method)",
        desc: "Metode pengerjaan soal super cepat namun tetap menggunakan logika dasar yang kuat, bukan hafalan buta.",
    },
    {
        title: "Mentor & Komunitas Suportif",
        desc: "Dikelilingi teman seperjuangan ambisius dan mentor yang siap memotivasi progressmu setiap hari.",
    },
];
---

<div class="py-8 space-y-12">
    <!-- Pain Points -->
    <div>
        <h2 class="text-2xl md:text-3xl font-bold font-heading text-ultimate-navy mb-6">Sering Mengalami Ini?</h2>
        <div class="space-y-4">
            {
                painPoints.map((item) => (
                    <div class="bg-red-50 border border-red-100 p-4 md:p-5 rounded-2xl flex items-start gap-4 hover:shadow-md transition-shadow">
                        <div class="bg-red-100 text-red-500 rounded-full w-8 h-8 flex items-center justify-center shrink-0 mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                    clip-rule="evenodd"
                                />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-red-900 text-lg mb-1">{item.title}</h3>
                            <p class="text-red-700 text-sm leading-relaxed opacity-90">{item.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Solutions -->
    <div>
        <h2 class="text-2xl md:text-3xl font-bold font-heading text-ultimate-blue mb-6">Solusi Ultimate</h2>
        <div class="space-y-4">
            {
                solutions.map((item) => (
                    <div class="bg-blue-50 border border-blue-100 p-4 md:p-5 rounded-2xl flex items-start gap-4 hover:shadow-md transition-shadow">
                        <div class="bg-blue-100 text-ultimate-blue rounded-full w-8 h-8 flex items-center justify-center shrink-0 mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-ultimate-navy text-lg mb-1">{item.title}</h3>
                            <p class="text-slate-600 text-sm leading-relaxed">{item.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>
