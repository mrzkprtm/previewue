---
interface Props {
    title: string;
    content: string[];
}

const { title, content } = Astro.props;
const normalizeTextBlock = (text: string) => text
    .split("\n")
    .map((line) => line.replace(/\s+/g, " ").trim())
    .join("\n")
    .replace(/\n{3,}/g, "\n\n")
    .trim();
---

<section class="py-12 md:py-16 bg-white">
    <div class="container mx-auto">
        <div class="max-w-4xl">
            <h2 class="text-2xl md:text-3xl font-heading font-bold text-ultimate-blue mb-8">{title.trim()}</h2>
            <div class="space-y-6 text-slate-600 leading-relaxed text-base md:text-lg text-justify">
                {content.map((paragraph) => <p class="whitespace-pre-line">{normalizeTextBlock(paragraph)}</p>)}
            </div>
        </div>
    </div>
</section>
