---
interface Props {
    title: string;
    content: string[];
}

const { title, content } = Astro.props;
---

<section class="py-12 md:py-16 bg-white">
    <div class="container mx-auto">
        <div class="max-w-4xl">
            <h2 class="text-2xl md:text-3xl font-heading font-bold text-ultimate-blue mb-8">{title}</h2>
            <div class="space-y-6 text-slate-600 leading-relaxed text-base md:text-lg">
                {content.map((paragraph) => <p>{paragraph}</p>)}
            </div>
        </div>
    </div>
</section>
