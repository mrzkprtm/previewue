---
interface Props {
    title: string;
    subtitle: string;
    items: {
        name: string;
        program: string;
        quote: string;
    }[];
}

const { title, subtitle, items } = Astro.props;
---

<section class="py-12 md:py-16 bg-slate-50">
    <div class="container mx-auto">
        <h2 class="text-2xl md:text-3xl font-heading font-bold text-ultimate-blue mb-3 text-center">{title}</h2>
        <p class="text-slate-500 text-center mb-10 text-sm md:text-base">{subtitle}</p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                items.map((item) => (
                    <div class="bg-white p-6 md:p-7 rounded-2xl shadow-md border border-slate-100 flex flex-col hover:-translate-y-1 transition-all duration-300">
                        <div class="flex items-center gap-1 mb-4">
                            {[1, 2, 3, 4, 5].map(() => (
                                <svg class="w-4 h-4 text-ultimate-yellow" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                            ))}
                        </div>
                        <p class="text-slate-600 mb-6 italic flex-grow leading-relaxed text-sm">"{item.quote}"</p>
                        <div class="flex items-center gap-3 border-t border-slate-100 pt-5">
                            <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-ultimate-blue font-bold text-sm">{item.name.charAt(0)}</div>
                            <div>
                                <div class="font-bold text-slate-900 text-sm">{item.name}</div>
                                <div class="text-xs text-ultimate-blue">{item.program}</div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
