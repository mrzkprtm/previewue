---
interface Props {
    title: string;
    items: {
        title: string;
        description: string;
        iconPath: string;
    }[];
}

const { title, items } = Astro.props;
---

<section class="py-12 md:py-16 bg-white relative overflow-hidden">
    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-72 h-72 bg-blue-50 rounded-full blur-3xl opacity-40"></div>

    <div class="container mx-auto relative z-10">
        <div class="flex flex-col lg:flex-row items-center gap-10 lg:gap-14">
            <!-- Left Image Area (smaller) -->
            <div class="lg:w-1/4 w-48 md:w-56 relative shrink-0">
                <div class="absolute -inset-3 bg-ultimate-yellow/10 rounded-[2rem] -rotate-3"></div>
                <div class="relative rounded-2xl overflow-hidden shadow-xl">
                    <img src="/images/hero_img.png" alt="Kenapa memilih kami" class="w-full h-auto object-cover" />
                </div>
            </div>

            <!-- Right Content Area -->
            <div class="lg:w-3/4">
                <h2 class="text-2xl md:text-3xl font-heading font-bold text-ultimate-blue mb-8">{title}</h2>

                <div class="space-y-4">
                    {
                        items.map((item) => (
                            <div class="flex items-start gap-5 p-5 rounded-2xl hover:bg-slate-50 transition-colors group">
                                <div class="w-12 h-12 shrink-0 bg-blue-50 rounded-xl flex items-center justify-center text-ultimate-blue group-hover:bg-ultimate-blue group-hover:text-white transition-all duration-300">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <path d={item.iconPath} />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-base font-bold text-slate-900 mb-0.5">{item.title}</h3>
                                    <p class="text-slate-600 leading-relaxed text-sm">{item.description}</p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
