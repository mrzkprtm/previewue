---
import type { ProgramData } from "../../data/programData";

interface Props {
    program: ProgramData;
}

const { program } = Astro.props;
---

<article class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden flex flex-col md:flex-row hover:shadow-lg transition-all duration-300 group ring-1 ring-slate-100 hover:ring-primary/20 relative">
    <!-- Accent Border Right -->
    <div class="absolute right-0 top-0 bottom-0 w-1.5 bg-primary rounded-r-2xl hidden md:block"></div>

    <!-- Image / Logo Section -->
    <div class={`w-full md:w-1/3 relative overflow-hidden h-48 md:h-auto shrink-0 flex items-center justify-center p-6 ${program.themeColor ? program.themeColor : "bg-slate-100"}`}>
        {
            program.logoText ? (
                <div class="text-center select-none transform group-hover:scale-105 transition-transform duration-500" set:html={program.logoText} />
            ) : (
                <img src={program.image} alt={program.title} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500 absolute inset-0" />
            )
        }

        {!program.logoText && <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent md:hidden" />}
    </div>

    <!-- Content -->
    <div class="p-6 md:p-8 flex-grow flex flex-col justify-between">
        <div>
            <h3 class="text-2xl font-bold font-heading text-slate-800 mb-2 group-hover:text-primary transition-colors">
                {program.title}
            </h3>
            <p class="text-slate-600 mb-6 text-sm md:text-base leading-relaxed">
                {program.subtitle}
            </p>

            <!-- Meta Info -->
            <div class="space-y-3 mb-8">
                <div class="flex items-center gap-3 text-slate-600 text-sm">
                    <div class="w-6 h-6 rounded-full bg-red-50 flex items-center justify-center text-red-500 shrink-0">
                        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <span>{program.targetAudience}</span>
                </div>

                <div class="flex items-center gap-3 text-slate-600 text-sm">
                    <div class="w-6 h-6 rounded-full bg-blue-50 flex items-center justify-center text-blue-500 shrink-0">
                        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <span>{program.duration}</span>
                </div>

                <div class="flex items-center gap-3 text-slate-600 text-sm">
                    <div class="w-6 h-6 rounded-full bg-amber-50 flex items-center justify-center text-amber-500 shrink-0">
                        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                            ></path>
                        </svg>
                    </div>
                    <span>{program.method}</span>
                </div>
            </div>
        </div>

        <div class="flex justify-end">
            <a
                href={`/program/${program.slug}`}
                class="inline-flex items-center justify-center px-6 py-2.5 bg-[#007aff] hover:bg-[#0063cf] text-white font-bold rounded-full transition-all text-sm shadow-md hover:shadow-lg hover:-translate-y-0.5"
            >
                Pelajari lebih lanjut
            </a>
        </div>
    </div>
</article>
