---
interface Props {
  tests?: {
    title: string;
    image: string;
    link: string;
  }[];
}

const {
  tests = [
    { title: "IELTS", image: "https://placehold.co/300x400/0369a1/ffffff?text=IELTS", link: "#" },
    { title: "TOEFL iBT", image: "https://placehold.co/300x400/0f766e/ffffff?text=TOEFL", link: "#" },
    { title: "GMAT", image: "https://placehold.co/300x400/042f2e/ffffff?text=GMAT", link: "#" },
    { title: "SAT", image: "https://placehold.co/300x400/111827/ffffff?text=SAT", link: "#" },
  ],
} = Astro.props;
---

<section class="py-10 lg:py-16 bg-ue-blue-light/30">
  <div class="container mx-auto text-center">
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold font-heading text-sky-700 mb-4">Yakin Dengan Kemampuan Bahasa Inggrismu?</h2>
      <p class="text-xl text-gray-700 font-body">Coba Tes Gratis di Ultimate Education</p>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 w-full">
      {
        tests.map((test) => (
          <div class="group relative rounded-xl overflow-hidden shadow-lg aspect-[3/4] cursor-pointer">
            <img src={test.image} alt={test.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex flex-col justify-end items-center pb-8 p-4">
              <h3 class="text-white text-2xl font-bold font-heading mb-4">{test.title}</h3>
              <a
                href={test.link}
                class="bg-white text-gray-900 font-semibold py-2 px-6 rounded-full hover:bg-primary hover:text-white transition-colors duration-300 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100"
              >
                Mulai Tes
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
