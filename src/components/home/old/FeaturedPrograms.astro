---
const programs = [
    {
        title: "Raih Beasiswa Impian dengan Ultimate Scholarship Prep",
        description: "Bimbingan lengkap: strategi, dokumen, esai, hingga simulasi wawancara.",
        cta: "Lihat Detail",
        link: "/program/beasiswa",
        image: "https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=500&h=350&fit=crop",
        badge: "Scholarship",
    },
    {
        title: "Skor IELTS Tinggi untuk Kampus Top Dunia",
        description: "Belajar dari dasar hingga mahir. Latihan terarah dan tutor ahli untuk capai skor 6.5+.",
        cta: "Cek Ultimate IELTS",
        link: "/program/ielts",
        image: "https://images.unsplash.com/photo-1434030216411-0b793f4b4173?w=500&h=350&fit=crop",
        badge: "IELTS",
    },
    {
        title: "Kuasai Bahasa Asing, Maksimalkan Skor Tes",
        description: "Persiapkan tes HSK, JLPT, TOEFL, dan TOPIK. Sertifikasi internasional dalam genggaman.",
        cta: "Cek Program Bimbingan",
        link: "/program/bahasa",
        image: "https://images.unsplash.com/photo-1546410531-bb4caa6b424d?w=500&h=350&fit=crop",
        badge: "Language",
    },
    {
        title: "Skor Maksimal Tes Masuk Universitas Dunia",
        description: "Siap hadapi ACT, GMAT, GRE, dan SAT. Bimbingan intensif untuk lolos kampus impian.",
        cta: "Cek Program Persiapan",
        link: "/program/tes",
        image: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=350&fit=crop",
        badge: "Test Prep",
    },
];
---

<section class="py-12 lg:py-20 bg-white">
    <div class="container mx-auto">
        <div class="text-center mb-10 md:mb-16">
            <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-ultimate-blue text-xs md:text-sm font-semibold uppercase tracking-wider mb-4"> Program Terbaik </span>
            <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold font-heading text-ultimate-navy">Program Unggulan Ultimate Education</h2>
        </div>

        <div class="space-y-12">
            {
                programs.map((program, i) => (
                    <div class={`flex flex-col md:flex-row items-center gap-6 md:gap-12 ${i % 2 === 1 ? "md:flex-row-reverse" : ""}`}>
                        <div class="w-full md:w-1/2">
                            <div class="relative rounded-2xl overflow-hidden shadow-xl group">
                                <div class="absolute inset-0 bg-ultimate-blue/20 group-hover:bg-transparent transition-colors duration-300 z-10" />
                                <img src={program.image} alt={program.title} class="w-full h-64 md:h-80 object-cover transform group-hover:scale-105 transition-transform duration-500" loading="lazy" />
                            </div>
                        </div>
                        <div class="w-full md:w-1/2 space-y-4 md:space-y-6 text-center md:text-left">
                            <span class="inline-block py-1 px-3 rounded-md bg-ultimate-yellow/20 text-ultimate-navy text-xs md:text-sm font-semibold uppercase tracking-wider">{program.badge}</span>
                            <h3 class="text-xl md:text-3xl font-semibold font-heading text-ultimate-navy leading-tight">{program.title}</h3>
                            <p class="text-gray-600 text-[15px] md:text-lg leading-relaxed">{program.description}</p>
                            <a href={program.link} class="inline-flex items-center justify-center md:justify-start gap-2 text-ultimate-blue font-medium hover:text-ultimate-navy transition-colors group/link">
                                {program.cta}
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
