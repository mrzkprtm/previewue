---
const programs = [
    {
        title: "Persiapan Maksimal Raih Beasiswa Impian lewat Ultimate Scholarship Preparation",
        description: "Mulai dari pemetaan tujuan, strategi beasiswa, pembuatan dokumen, penulisan esai, hingga simulasi wawancara - semua kamu dapatkan di sini!",
        cta: "Pelajari lebih lanjut",
        link: "/program/beasiswa",
        image: "https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=500&h=350&fit=crop",
        badge: "Scholarship",
    },
    {
        title: "Siapkan IELTS-mu dan Lolos ke Kampus Top Dunia bareng Ultimate IELTS",
        description: "Bingung mulai belajar IELTS? Tenang, IELTS Academy siap bantu dari dasar sampai mahir! Belajar efektif, latihan terarah, dan bimbingan tutor andal untuk capai skor 6.5+ ke atas.",
        cta: "Cek Ultimate IELTS",
        link: "/program/ielts",
        image: "https://images.unsplash.com/photo-1434030216411-0b793f4b4173?w=500&h=350&fit=crop",
        badge: "IELTS",
    },
    {
        title: "Belajar Bahasa Asing Lebih Terarah, Skor Tes Lebih Maksimal",
        description: "Kuasai bahasa asing dan persiapkan dirimu untuk tes seperti HSK, JLPT, TOEFL, dan TOPIK bersama Ultimate Education. Sertifikasi internasional? Bisa kamu dapatkan!",
        cta: "Cek Program Bimbingan",
        link: "/program/bahasa",
        image: "https://images.unsplash.com/photo-1546410531-bb4caa6b424d?w=500&h=350&fit=crop",
        badge: "Language",
    },
    {
        title: "Capai Skor Maksimal untuk Tes Masuk Universitas Luar Negeri",
        description: "Bersama tutor ahli, kamu bisa siap hadapi ACT, GMAT, GRE, dan SAT dengan lebih percaya diri. Ikuti program intensif demi lolos kampus impian!",
        cta: "Cek Program Persiapan",
        link: "/program/tes",
        image: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=350&fit=crop",
        badge: "Test Prep",
    },
];
---

<section class="py-20 bg-white">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-ultimate-blue text-base font-bold uppercase tracking-wider mb-4"> Program Terbaik </span>
            <h2 class="text-3xl md:text-4xl font-bold font-heading text-ultimate-navy">Program Unggulan Ultimate Education</h2>
        </div>

        <div class="space-y-12">
            {
                programs.map((program, i) => (
                    <div class={`flex flex-col md:flex-row items-center gap-8 md:gap-12 ${i % 2 === 1 ? "md:flex-row-reverse" : ""}`}>
                        <div class="w-full md:w-1/2">
                            <div class="relative rounded-2xl overflow-hidden shadow-xl group">
                                <div class="absolute inset-0 bg-ultimate-blue/20 group-hover:bg-transparent transition-colors duration-300 z-10" />
                                <img src={program.image} alt={program.title} class="w-full h-64 md:h-80 object-cover transform group-hover:scale-105 transition-transform duration-500" loading="lazy" />
                            </div>
                        </div>
                        <div class="w-full md:w-1/2 space-y-6">
                            <span class="inline-block py-1 px-3 rounded-md bg-ultimate-yellow/20 text-ultimate-navy text-base font-bold uppercase tracking-wider">{program.badge}</span>
                            <h3 class="text-2xl md:text-3xl font-bold font-heading text-ultimate-navy leading-tight">{program.title}</h3>
                            <p class="text-gray-600 text-lg leading-relaxed">{program.description}</p>
                            <a href={program.link} class="inline-flex items-center gap-2 text-ultimate-blue font-bold hover:text-ultimate-navy transition-colors group/link">
                                {program.cta}
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
