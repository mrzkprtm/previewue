---
const faqs = [
    {
        question: "Apa itu Ultimate Education?",
        answer: "Lembaga pendidikan persiapan tes internasional (IELTS, TOEFL, SAT, dll) dan bimbingan beasiswa luar negeri terpercaya.",
    },
    {
        question: "Berapa biaya untuk belajar?",
        answer: "Mulai dari Rp 2 juta. Tersedia opsi cicilan 0%. Hubungi kami untuk promo terbaru.",
    },
    {
        question: "Bagaimana cara mendaftar?",
        answer: "Sangat mudah. Hubungi WhatsApp +62 838 1231 0368 atau isi formulir di website kami.",
    },
    {
        question: "Apa saja program yang tersedia?",
        answer: "Persiapan Tes Internasional (IELTS, TOEFL, GMAT, dll), Bimbingan Beasiswa, dan Kelas Bahasa Asing.",
    },
    {
        question: "Apakah ada garansi skor?",
        answer: "Ya, ada garansi mengulang program GRATIS jika target skor belum tercapai (S&K berlaku).",
    },
    {
        question: "Apakah tersedia kelas online?",
        answer: "Ya, tersedia kelas Online (via Zoom) dan Offline (Jakarta & Bandung).",
    },
];
---

<section class="py-12 lg:py-20 bg-white">
    <div class="container mx-auto max-w-4xl">
        <div class="text-center mb-16">
            <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-ultimate-blue text-xs md:text-sm font-semibold uppercase tracking-wider mb-4 border border-blue-100"> FAQ </span>
            <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold font-heading text-ultimate-navy mb-4">Seputar Ultimate Education</h2>
            <p class="text-gray-600">Pertanyaan yang sering diajukan oleh siswa kami</p>
        </div>

        <div class="space-y-4">
            {
                faqs.map((faq) => (
                    <details class="group bg-slate-50 rounded-xl border border-slate-200 open:bg-white open:shadow-lg open:border-ultimate-blue/30 transition-all duration-300">
                        <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                            <span class="font-semibold text-lg text-ultimate-navy group-open:text-ultimate-blue transition-colors">{faq.question}</span>
                            <span class="transition-transform duration-300 group-open:rotate-180 text-ultimate-blue p-2 bg-white rounded-full shadow-sm group-open:bg-blue-50">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </span>
                        </summary>
                        <div class="px-6 pb-6 pt-0 text-gray-600 leading-relaxed animate-fade-in-down">
                            <div class="h-px bg-slate-100 mb-4 w-full" />
                            {faq.answer}
                        </div>
                    </details>
                ))
            }
        </div>
    </div>
</section>

<style>
    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-down {
        animation: fadeInDown 0.3s ease-out;
    }
</style>
