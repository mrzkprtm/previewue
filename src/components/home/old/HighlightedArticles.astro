---
import { getPosts, getCategories } from "../../../lib/api/endpoints";
import type { WPPost, WPCategory } from "../../../types/wp";

// Fetch Articles
let articles: WPPost[] = [];
let categories: WPCategory[] = [];
try {
    articles = await getPosts(1, 3); // Fetch 3 items
    categories = await getCategories();
} catch (e) {
    console.warn("Failed to fetch articles:", e);
}

// Fallback if no articles found
if (articles.length === 0) {
    articles = [
        {
            id: 1,
            slug: "#",
            title: "5 Strategi Jitu Meraih Skor IELTS 8.0 dalam 3 Bulan",
            date: new Date().toISOString(),
            excerpt: "Pelajari tips dan trik dari para expert untuk memaksimalkan persiapan IELTS Anda.",
            featuredImage: {
                src: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=800&q=80",
                alt: "IELTS Preparation",
            },
            categories: [{ name: "Tips Belajar", slug: "tips" }],
        },
        {
            id: 2,
            slug: "#",
            title: "Panduan Lengkap Beasiswa LPDP untuk Jenjang Magister",
            date: new Date().toISOString(),
            excerpt: "Kupas tuntas persyaratan dan tahapan seleksi beasiswa LPDP tahun ini.",
            featuredImage: {
                src: "https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=800&q=80",
                alt: "Scholarship Guide",
            },
            categories: [{ name: "Beasiswa", slug: "beasiswa" }],
        },
        {
            id: 3,
            slug: "#",
            title: "Perbedaan TOEFL iBT dan ITP: Mana yang Harus Kamu Ambil?",
            date: new Date().toISOString(),
            excerpt: "Jangan salah pilih! Ketahui perbedaan mendasar kedua jenis tes TOEFL ini.",
            featuredImage: {
                src: "https://images.unsplash.com/photo-1516321318423-f06f85e504b3?w=800&q=80",
                alt: "TOEFL Comparison",
            },
            categories: [{ name: "Info Tes", slug: "info-tes" }],
        },
    ] as any[]; // Type cast for mock data
}
---

<section class="py-20 bg-slate-50" id="artikel">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <span class="inline-block py-1 px-3 rounded-full bg-white border border-slate-200 text-ultimate-blue text-base font-bold uppercase tracking-wider mb-4 shadow-sm"> Artikel Terbaru </span>
            <h2 class="text-3xl md:text-4xl font-bold font-heading text-ultimate-navy mb-4">Tips & Insight untuk Masa Depanmu</h2>
        </div>

        {
            categories.length > 0 && (
                <div class="flex flex-wrap justify-center gap-4 mb-12" id="articleTabs">
                    <button class="px-6 py-2 rounded-full bg-ultimate-blue text-white font-bold shadow-md transition-transform transform hover:-translate-y-1">Semua</button>
                    {categories.slice(0, 3).map((cat) => (
                        <button class="px-6 py-2 rounded-full bg-white text-gray-600 font-medium hover:bg-gray-100 transition-colors border border-gray-200">{cat.name}</button>
                    ))}
                </div>
            )
        }

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            ) }

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {
                    articles.map((article) => (
                        <a href={`/artikel/${article.slug}`} class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-slate-100 flex flex-col h-full">
                            <div class="relative h-48 overflow-hidden">
                                <img
                                    src={article.featuredImage?.src || "https://placehold.co/400x250/f3f4f6/666?text=Article"}
                                    alt={article.title}
                                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                                    loading="lazy"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                            </div>
                            <div class="p-6 flex flex-col flex-grow">
                                {article.categories?.[0] && <span class="inline-block px-3 py-1 bg-blue-50 text-ultimate-blue text-base font-bold rounded-full mb-3 w-fit">{article.categories[0].name}</span>}
                                <h3 class="text-xl font-bold text-ultimate-navy mb-3 line-clamp-2 group-hover:text-ultimate-blue transition-colors">{article.title}</h3>
                                <div class="mt-auto pt-4 border-t border-slate-100 flex justify-between items-center text-gray-500 text-base">
                                    <span>{new Date(article.date).toLocaleDateString("id-ID", { day: "numeric", month: "long", year: "numeric" })}</span>
                                    <span class="group-hover:translate-x-1 transition-transform text-ultimate-blue">
                                        Baca <i class="fas fa-arrow-right ml-1" />
                                    </span>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>

            <div class="text-center mt-12">
                <a href="/artikel" class="inline-flex items-center gap-2 px-8 py-3 border-2 border-ultimate-blue text-ultimate-blue font-bold rounded-xl hover:bg-ultimate-blue hover:text-white transition-all duration-300">
                    Lihat Artikel Lainnya
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
