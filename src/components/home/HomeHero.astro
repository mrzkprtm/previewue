---
import HomeHeroAnimation from "./HomeHeroAnimation.astro";

const partners = [
    "/logos/partners/4-300x300.webp",
    "/logos/partners/6-300x300.webp",
    "/logos/partners/anggarda_paramita_sampoerna.webp",
    "/logos/partners/buma_group.webp",
    "/logos/partners/euroasiatic.webp",
    "/logos/partners/global_islamic_school.webp",
    "/logos/partners/pertamina.webp",
    "/logos/partners/piagio.webp",
    "/logos/partners/puninar_logistics.webp",
];

const programOptions = ["Ultimate Scholarship Prep", "Ultimate IELTS", "Ultimate Lang Prep"];
---

<section class="relative pt-32 pb-16 overflow-hidden bg-hero-gradient">
    <!-- Semi-circle detail at the top right -->
    <div class="absolute top-0 right-0 w-[500px] h-[250px] bg-ultimate-yellow rounded-b-full translate-x-0 -translate-y-4 flex items-center justify-center text-center px-12 z-0">
        <h2 class="text-ultimate-blue font-heading font-bold text-xl leading-tight mt-10">
            Bareng Ultimate Education,<br />
            <span class="text-2xl">Kuliah di Kampus Top Dunia Bukan Cuma Mimpi!</span>
        </h2>
    </div>

    <!-- Background Patterns -->
    <!-- Background Patterns -->

    <!-- Background Patterns -->
    <div class="absolute inset-0 opacity-20 pointer-events-none z-0" style="background-image: url('/images/pattern_2.svg'); background-size: 100% 100%; background-position: left center;"></div>

    <!-- Floating Animation (Full Width) -->
    <HomeHeroAnimation />

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20">
            <!-- Left Column: Content & Social Proof -->
            <div class="w-full lg:w-1/2 text-center lg:text-left pt-10">
                <div class="animate-fade-in-up">
                    <span class="inline-block py-1 px-3 rounded-full bg-white/10 border border-white/20 text-ultimate-yellow text-xs font-bold uppercase tracking-wider mb-6 backdrop-blur-sm"> #1 Education Consultant </span>
                    <h1 class="font-heading font-bold text-4xl lg:text-5xl xl:text-6xl text-white leading-tight mb-6">
                        Kursus Persiapan <span class="text-ultimate-yellow">IELTS, SAT, GRE & GMAT</span> untuk tingkatkan peluang kuliah di luar negri
                    </h1>
                    <p class="text-white/80 text-lg leading-relaxed mb-8 max-w-2xl mx-auto lg:mx-0">Bimbingan intensif dengan kurikulum teruju dan mentor berpengalaman dari top universities dunia.</p>
                </div>

                <!-- Social Proof Section -->
                <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-6 animate-fade-in-up delay-200">
                    <div class="flex items-center gap-4">
                        <div class="flex -space-x-3">
                            <img class="w-10 h-10 rounded-full border-2 border-ultimate-navy" src="https://i.pravatar.cc/100?img=1" alt="Student" />
                            <img class="w-10 h-10 rounded-full border-2 border-ultimate-navy" src="https://i.pravatar.cc/100?img=5" alt="Student" />
                            <img class="w-10 h-10 rounded-full border-2 border-ultimate-navy" src="https://i.pravatar.cc/100?img=8" alt="Student" />
                            <div class="w-10 h-10 rounded-full border-2 border-ultimate-navy bg-white flex items-center justify-center text-xs font-bold text-ultimate-navy">+1k</div>
                        </div>
                        <div class="text-left">
                            <div class="flex items-center gap-1">
                                <span class="text-ultimate-yellow font-bold text-lg">4.9/5</span>
                                <div class="flex text-ultimate-yellow">
                                    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path></svg>
                                    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path></svg>
                                    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path></svg>
                                    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path></svg>
                                    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path></svg>
                                </div>
                            </div>
                            <p class="text-white/60 text-xs font-sans">Trusted by Students</p>
                        </div>
                    </div>

                    <div class="h-10 w-px bg-white/20 hidden sm:block"></div>

                    <div class="text-left">
                        <p class="text-white font-bold text-2xl leading-none">98%</p>
                        <p class="text-white/60 text-xs font-sans mt-1">Acceptance Rate</p>
                    </div>
                </div>
            </div>

            <!-- Right Column: Special Offer Form -->
            <div class="w-full lg:w-1/2 flex justify-center lg:justify-end animate-fade-in-up delay-300">
                <div class="bg-white rounded-3xl p-6 md:p-8 shadow-2xl w-full max-w-md relative z-20 group hover:-translate-y-2 transition-transform duration-500">
                    <div class="absolute -top-6 -right-6 w-20 h-20 bg-ultimate-yellow rounded-full flex items-center justify-center shadow-lg animate-float">
                        <span class="text-ultimate-navy font-black text-xs text-center leading-tight uppercase transform -rotate-12">Limited<br />Offer</span>
                    </div>

                    <h3 class="text-center font-bold text-xl mb-2 text-ultimate-navy">
                        Dapatkan <span class="text-ultimate-blue relative">Penawaran Spesial<span class="absolute bottom-0 left-0 w-full h-1 bg-ultimate-yellow/30"></span></span>
                    </h3>
                    <p class="text-center text-slate-500 text-sm mb-6">Isi formulir untuk konsultasi gratis</p>

                    <form class="space-y-4">
                        <div>
                            <label class="block text-xs font-bold text-slate-500 mb-1.5 uppercase tracking-wide">Nomor Whatsapp*</label>
                            <div class="flex group-focus-within:ring-2 ring-ultimate-blue/20 rounded-xl transition-all">
                                <span class="bg-slate-50 border border-slate-200 border-r-0 rounded-l-xl px-3 py-3 text-slate-500 text-sm flex items-center font-bold">+62</span>
                                <input
                                    class="w-full bg-slate-50 border border-slate-200 focus:bg-white focus:border-ultimate-blue rounded-r-xl px-4 py-3 text-slate-900 text-sm focus:outline-none transition-colors font-medium placeholder:text-slate-400"
                                    placeholder="812345678"
                                    type="text"
                                />
                            </div>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-500 mb-1.5 uppercase tracking-wide">Program Pilihan*</label>
                            <div class="relative">
                                <select
                                    class="w-full bg-slate-50 border border-slate-200 focus:bg-white focus:border-ultimate-blue rounded-xl px-4 py-3 text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-ultimate-blue/20 transition-all appearance-none font-medium cursor-pointer"
                                >
                                    <option value="" disabled selected>Pilih Program</option>
                                    {programOptions.map((option) => <option value={option}>{option}</option>)}
                                </select>
                                <div class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-slate-500">
                                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20"><path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"></path></svg>
                                </div>
                            </div>
                        </div>
                        <button
                            class="w-full bg-gradient-to-r from-ultimate-blue to-ultimate-navy hover:from-ultimate-navy hover:to-ultimate-blue text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 text-sm uppercase tracking-wider mt-2 flex items-center justify-center gap-2 group/btn"
                        >
                            <span>ðŸš€ Ambil Promo Sekarang!</span>
                            <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                            >
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Integrated Logo Strip Center -->
        <div class="w-full flex justify-center mt-20 animate-fade-in-up delay-500">
            <div class="bg-white rounded-full py-6 px-10 shadow-lg w-full overflow-hidden">
                <div class="flex items-center animate-marquee">
                    <div class="flex items-center gap-12 shrink-0">
                        {partners.map((logo) => <img alt="Partner Logo" class="h-8 md:h-12 w-auto object-contain grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300" src={logo} />)}
                    </div>
                    <div class="flex items-center gap-12 shrink-0 ml-12" aria-hidden="true">
                        {partners.map((logo) => <img alt="Partner Logo" class="h-8 md:h-12 w-auto object-contain grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300" src={logo} />)}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out forwards;
        opacity: 0;
    }

    .delay-200 {
        animation-delay: 0.2s;
    }

    .delay-300 {
        animation-delay: 0.3s;
    }

    .delay-500 {
        animation-delay: 0.5s;
    }

    @keyframes marquee-scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    .animate-marquee {
        animation: marquee-scroll 40s linear infinite;
    }

    .animate-marquee:hover {
        animation-play-state: paused;
    }
</style>
