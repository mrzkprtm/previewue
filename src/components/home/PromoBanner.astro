<section class="py-12 md:py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="relative bg-primary rounded-[3rem] md:rounded-[5rem] overflow-hidden shadow-2xl">
        {/* Background Decorative - Gradient/Curves */}
        <div class="absolute inset-0 bg-hero-gradient opacity-100"></div>
        
        <div class="relative z-10 flex flex-col md:flex-row items-center justify-between px-6 py-12 md:px-16 md:py-16 gap-8 md:gap-12">
            
            {/* Image Side (Left) - using visual trickery to look like the cutout in screenshot if possible, or just standard overlap */}
            <div class="relative w-48 h-48 md:w-64 md:h-64 flex-shrink-0">
                {/* Abstract White Shapes behind */}
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[140%] h-[40%] bg-white rounded-full -rotate-6"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[110%] h-[110%] bg-transparent border-[10px] border-white/20 rounded-full"></div>

                {/* Person Image */}
                <img 
                    src="https://placehold.co/300x400/png?text=Student" 
                    alt="Happy Student" 
                    class="relative z-10 w-full h-full object-contain drop-shadow-lg"
                />
            </div>

            {/* Content Side (Right/Center) */}
            <div class="text-center md:text-right flex-1 text-white">
                <h2 class="text-2xl md:text-4xl font-bold font-heading mb-2 leading-tight">
                    Skor Naik,<br/>
                    Beasiswa Tercapai! Bareng<br/>
                    <span class="text-yellow-300">Ultimate Education</span>
                </h2>
                <div class="mt-8">
                    <a href="#" class="inline-block bg-white text-primary font-bold font-heading py-3 px-8 rounded-full shadow-lg hover:shadow-xl hover:bg-gray-50 hover:scale-105 transition-all duration-300">
                        Mulai Persiapan Sekarang
                    </a>
                </div>
            </div>

        </div>
    </div>
  </div>
</section>

