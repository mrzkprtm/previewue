---
import { Image } from "astro:assets";
import everydayImg from "@/assets/images/freetest/Everyday-Before.webp";
import businessImg from "@/assets/images/freetest/Business-Before.webp";
import studyImg from "@/assets/images/freetest/Study-Before.webp";
import travelImg from "@/assets/images/freetest/Travel-Before.webp";
---

<section class="py-10 lg:py-16 bg-white">
    <div class="container mx-auto">
        <div class="text-center mb-12">
            <h2 class="font-heading font-semibold text-2xl md:text-3xl lg:text-4xl text-ultimate-navy mb-4">Coba Placement Test</h2>
            <p class="text-slate-500 max-w-2xl mx-auto text-[15px] md:text-base lg:text-lg font-body">Ukur kemampuan bahasa Inggrismu sekarang dan temukan program yang paling tepat untukmu.</p>
        </div>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
            <div class="relative group h-100 overflow-hidden rounded-3xl shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
                <Image
                    alt="Everyday"
                    class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-700"
                    src={everydayImg}
                    width={315}
                    loading="lazy"
                    decoding="async"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-ultimate-navy/80 via-transparent to-transparent flex flex-col justify-end p-4 md:p-6">
                    <h3 class="text-white text-base md:text-xl font-semibold font-heading mb-1 md:mb-2 text-center md:text-left">IELTS</h3>
                    <a href="https://learn.ultimateducation.co.id/local/invitation/join.php?courseid=42&id=3f330117-3957-4fc9-9412-617df135e121" target="_blank" rel="noopener noreferrer" class="w-full md:w-fit bg-white/20 backdrop-blur-md text-white border border-white/40 px-3 md:px-4 py-2 rounded-xl text-xs md:text-sm font-medium hover:bg-white hover:text-ultimate-navy transition-all"
                        >Mulai Tes</a
                    >
                </div>
            </div>

            <div class="relative group h-100 overflow-hidden rounded-3xl shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
                <Image
                    alt="Business"
                    class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-700"
                    src={businessImg}
                    width={315}
                    loading="lazy"
                    decoding="async"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-ultimate-navy/80 via-transparent to-transparent flex flex-col justify-end p-4 md:p-6">
                    <h3 class="text-white text-base md:text-xl font-semibold font-heading mb-1 md:mb-2 text-center md:text-left">GMAT</h3>
                    <a href="https://learn.ultimateducation.co.id/local/invitation/join.php?courseid=44&id=868705b8-a257-4eae-ba77-156ac5bb10a2" target="_blank" rel="noopener noreferrer" class="w-full md:w-fit bg-white/20 backdrop-blur-md text-white border border-white/40 px-3 md:px-4 py-2 rounded-xl text-xs md:text-sm font-medium hover:bg-white hover:text-ultimate-navy transition-all"
                        >Mulai Tes</a
                    >
                </div>
            </div>

            <div class="relative group h-100 overflow-hidden rounded-3xl shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
                <Image
                    alt="Study"
                    class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-700"
                    src={studyImg}
                    width={315}
                    loading="lazy"
                    decoding="async"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-ultimate-navy/80 via-transparent to-transparent flex flex-col justify-end p-4 md:p-6">
                    <h3 class="text-white text-base md:text-xl font-semibold font-heading mb-1 md:mb-2 text-center md:text-left">GRE</h3>
                    <a href="https://learn.ultimateducation.co.id/local/invitation/join.php?courseid=68&id=9074fe30-f690-42c1-9b7d-f1a0180b4a3f" target="_blank" rel="noopener noreferrer" class="w-full md:w-fit bg-white/20 backdrop-blur-md text-white border border-white/40 px-3 md:px-4 py-2 rounded-xl text-xs md:text-sm font-medium hover:bg-white hover:text-ultimate-navy transition-all"
                        >Mulai Tes</a
                    >
                </div>
            </div>

            <div class="relative group h-100 overflow-hidden rounded-3xl shadow-lg border border-slate-100 hover:shadow-xl transition-shadow duration-300">
                <Image
                    alt="Travel"
                    class="w-full h-full object-cover object-top group-hover:scale-110 transition-transform duration-700"
                    src={travelImg}
                    width={315}
                    loading="lazy"
                    decoding="async"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-ultimate-navy/80 via-transparent to-transparent flex flex-col justify-end p-4 md:p-6">
                    <h3 class="text-white text-base md:text-xl font-semibold font-heading mb-1 md:mb-2 text-center md:text-left">SAT</h3>
                    <a href="https://learn.ultimateducation.co.id/local/invitation/join.php?courseid=49&id=ba0691d9-e137-400c-a136-94b28557a356" target="_blank" rel="noopener noreferrer" class="w-full md:w-fit bg-white/20 backdrop-blur-md text-white border border-white/40 px-3 md:px-4 py-2 rounded-xl text-xs md:text-sm font-medium hover:bg-white hover:text-ultimate-navy transition-all"
                        >Mulai Tes</a
                    >
                </div>
            </div>
        </div>
    </div>
</section>
