---
import { programs as allPrograms } from "../../data/programData";

// Map data to component props format if needed, or just use the data directly
const featuredPrograms = allPrograms.slice(0, 4);
---

<section class="py-20 bg-slate-50 relative overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold font-heading text-gray-900 mb-4">
        Program Unggulan <span class="text-primary">Ultimate Education</span>
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto text-lg">Pilih program persiapan terbaik yang dirancang khusus untuk membantumu meraih impian kuliah di luar negeri.</p>
    </div>

    <div class="flex flex-col gap-8 md:gap-12 max-w-5xl mx-auto">
      {
        featuredPrograms.map((program, index) => (
          <div class={`bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100 overflow-hidden flex flex-col md:flex-row items-stretch group ring-1 ring-slate-100`}>
            {/* Visual Side - Vibrant Background with Logo */}
            <div class={`w-full h-48 md:h-auto md:w-[35%] relative flex items-center justify-center overflow-hidden p-6 ${program.themeColor || "bg-blue-600"}`}>
              {/* Text/Logo Overlay */}
              <div class="relative z-10 text-center transform group-hover:scale-105 transition-transform duration-500">
                <div set:html={program.logoText || `<span class="text-white font-bold text-3xl">${program.title}</span>`} />
              </div>

              {/* Hover Effect Overlay */}
              <div class="absolute inset-0 bg-white/0 group-hover:bg-white/10 transition-colors duration-300" />
            </div>

            {/* Content Side */}
            <div class="p-6 md:p-10 flex-1 flex flex-col justify-center">
              <div class="flex flex-wrap gap-2 mb-4">
                <span class="bg-blue-50 text-blue-600 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">{program.category}</span>
                <span class="bg-slate-100 text-slate-500 text-xs font-bold px-3 py-1 rounded-full flex items-center gap-1">
                  <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {program.duration}
                </span>
              </div>

              <h3 class="text-2xl md:text-3xl font-bold font-heading text-slate-800 mb-3 group-hover:text-primary transition-colors">{program.title}</h3>
              <p class="text-slate-600 mb-8 leading-relaxed text-base">{program.description.substring(0, 120)}...</p>

              <div class="flex items-center justify-between mt-auto">
                <div class="hidden md:flex -space-x-2">
                  {[1, 2, 3].map((i) => (
                    <div class={`w-8 h-8 rounded-full border-2 border-white bg-slate-200 flex items-center justify-center text-[10px] font-bold text-slate-500 z-${10 - i}`}>U</div>
                  ))}
                  <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-100 flex items-center justify-center text-[10px] font-bold text-slate-500 z-0 pl-1">+50</div>
                </div>

                <a
                  href={`/program/${program.slug}`}
                  class="inline-flex items-center justify-center px-6 py-2.5 rounded-full bg-[#007aff] text-white font-bold text-sm md:text-base hover:bg-[#0063cf] transition-all shadow-md hover:shadow-lg hover:-translate-y-0.5 group-hover:ring-2 ring-offset-2 ring-blue-200"
                >
                  Pelajari lebih lanjut
                  <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
