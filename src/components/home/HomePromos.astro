        </div>
        <div class="absolute bottom-10 left-4 animate-pulse">
          <span class="material-icons-outlined text-[#145da0] text-xl">nights_stay</span>
        </div>

        <div class="space-y-3 w-full max-w-sm">
          <!-- Feature 1 -->
