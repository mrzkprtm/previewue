---
import Logo from "./Logo.jsx";

const social = [
  { icon: "instagram", href: "https://instagram.com/ultimateeducation", label: "Instagram" },
  { icon: "linkedin", href: "https://linkedin.com/company/ultimateeducation", label: "LinkedIn" },
  { icon: "youtube", href: "https://youtube.com/@ultimateeducation", label: "YouTube" },
  { icon: "tiktok", href: "https://tiktok.com/@ultimateeducation", label: "TikTok" },
  { icon: "facebook", href: "https://facebook.com/ultimateeducation", label: "Facebook" },
];

const programCategories = [
  {
    label: "Bahasa Inggris",
    items: [
      { name: "IELTS", href: "/program/ielts" },
      { name: "IELTS WHV", href: "/program/ielts" },
      { name: "TOEFL iBT", href: "/program/toefl" },
      { name: "TOEFL ITP", href: "/program/toefl" },
      { name: "TOEIC", href: "/program/toeic" },
      { name: "PTE Academic", href: "/program/pte" },
      { name: "General English", href: "/program/general-english" },
      { name: "Business English", href: "/program/business-english" },
    ],
  },
  {
    label: "Tes Akademik",
    items: [
      { name: "SAT", href: "/program/sat" },
      { name: "ACT", href: "/program/act" },
      { name: "GMAT", href: "/program/gmat" },
      { name: "GRE", href: "/program/gre" },
      { name: "LSAT", href: "/program/lsat" },
      { name: "UTBK SNBT", href: "/program/utbk" },
      { name: "Scholarship", href: "/program/scholarship" },
    ],
  },
  {
    label: "Bahasa Asing & Lainnya",
    items: [
      { name: "Mandarin (HSK)", href: "/program/hsk" },
      { name: "Japanese (JLPT)", href: "/program/jlpt" },
      { name: "Korean (TOPIK)", href: "/program/topik" },
      { name: "German (TesDAF)", href: "/program/testdaf" },
      { name: "French (DELF)", href: "/program/delf" },
      { name: "BIPA", href: "/program/bipa" },
      { name: "Ausbildung", href: "/program/ausbildung" },
      { name: "GED", href: "/program/ged" },
    ],
  },
];

const companyLinks = [
  { name: "Tentang Kami", href: "/about" },
  { name: "Partnership", href: "/partnership" },
  { name: "Artikel", href: "/artikel" },
  { name: "Beasiswa", href: "/scholarship" },
  { name: "Hubungi Kami", href: "/contact" },
];

const currentYear = new Date().getFullYear();
const currentPath = Astro.url.pathname;
---

<footer class="w-full bg-hero-gradient text-white">
  <!-- ═══════════════════════════════════════════ -->
  <!-- ROW 1: Brand + Contact                     -->
  <!-- ═══════════════════════════════════════════ -->
  <div class="container mx-auto pt-12 md:pt-16 pb-8 md:pb-10">
    <div class="flex flex-col lg:flex-row gap-10 lg:gap-16 items-start">
      <!-- Brand -->
      <div class="w-full lg:w-2/5 space-y-5">
        <a href="/" class="flex items-center gap-3 transition-transform hover:scale-105 duration-300">
          <Logo className="h-10 md:h-11 w-auto" />
          <div class="flex flex-col border-l border-white/30 pl-3.5">
            <div class="font-heading font-extrabold text-lg md:text-xl tracking-tighter leading-none text-white">ULTIMATE</div>
            <div class="font-heading font-medium text-[10px] md:text-xs tracking-[0.25em] uppercase leading-none mt-0.5 text-white/90">Education</div>
          </div>
        </a>
        <p class="text-white/80 leading-relaxed text-sm max-w-md font-medium">Konsultan pendidikan luar negeri terpercaya dengan layanan persiapan tes bahasa dan akademik terlengkap di Indonesia.</p>
        <!-- Social row -->
        <div class="flex gap-2.5">
          {
            social.map((item) => (
              <a
                href={item.href}
                target="_blank"
                rel="noopener noreferrer"
                class="group w-10 h-10 bg-white/10 hover:bg-white rounded-xl flex items-center justify-center transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
                aria-label={item.label}
              >
                {item.icon === "instagram" && (
                  <svg class="w-[18px] h-[18px] text-white group-hover:text-ultimate-navy transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                )}
                {item.icon === "linkedin" && (
                  <svg class="w-[18px] h-[18px] text-white group-hover:text-ultimate-navy transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h5v-8.327c0-3.771 4.968-4.085 4.968 0v8.327h5v-9.352c0-5.717-6.142-5.496-7.551-2.709l-.449-.788v-3.15z" />
                  </svg>
                )}
                {item.icon === "youtube" && (
                  <svg class="w-[18px] h-[18px] text-white group-hover:text-ultimate-navy transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.498-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                  </svg>
                )}
                {item.icon === "tiktok" && (
                  <svg class="w-[18px] h-[18px] text-white group-hover:text-ultimate-navy transition-colors" fill="currentColor" viewBox="0 0 32 32">
                    <path d="M24.562,7.613c-1.508-.983-2.597-2.557-2.936-4.391-.073-.396-.114-.804-.114-1.221h-4.814l-.008,19.292c-.081,2.16-1.859,3.894-4.039,3.894-.677,0-1.315-.169-1.877-.465-1.288-.678-2.169-2.028-2.169-3.582,0-2.231,1.815-4.047,4.046-4.047,.417,0,.816,.069,1.194,.187v-4.914c-.391-.053-.788-.087-1.194-.087-4.886,0-8.86,3.975-8.86,8.86,0,2.998,1.498,5.65,3.783,7.254,1.439,1.01,3.19,1.606,5.078,1.606,4.886,0,8.86-3.975,8.86-8.86V11.357c1.888,1.355,4.201,2.154,6.697,2.154v-4.814c-1.345,0-2.597-.4-3.647-1.085Z" />
                  </svg>
                )}
                {item.icon === "facebook" && (
                  <svg class="w-[18px] h-[18px] text-white group-hover:text-ultimate-navy transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-8.77h-2.946v-3.429h2.946v-2.528c0-2.921 1.784-4.51 4.387-4.51 1.246 0 2.318.092 2.63.133v3.049l-1.805.001c-1.417 0-1.691.674-1.691 1.662v2.183h3.375l-.439 3.429h-2.936v8.77h6.148c.731 0 1.325-.593 1.325-1.324v-21.351c0-.732-.594-1.325-1.325-1.325z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Contact cards -->
      <div class="w-full lg:w-3/5 grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="group bg-white/5 hover:bg-white/10 rounded-2xl p-4 transition-all duration-300 flex gap-4 items-start border border-transparent hover:border-white/10">
          <div class="w-10 h-10 shrink-0 bg-white/20 rounded-xl flex items-center justify-center text-white group-hover:bg-white group-hover:text-ultimate-navy transition-all duration-300 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg
            >
          </div>
          <div>
            <div class="text-xs font-bold text-white uppercase tracking-wide mb-1 group-hover:text-white transition-colors">Jakarta</div>
            <div class="text-white/80 text-xs leading-relaxed group-hover:text-white transition-colors">Sampoerna Strategic Square, Jl. Sudirman No. 45-46 (Lt. 18)</div>
          </div>
        </div>

        <div class="group bg-white/5 hover:bg-white/10 rounded-2xl p-4 transition-all duration-300 flex gap-4 items-start border border-transparent hover:border-white/10">
          <div class="w-10 h-10 shrink-0 bg-white/20 rounded-xl flex items-center justify-center text-white group-hover:bg-white group-hover:text-ultimate-navy transition-all duration-300 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg
            >
          </div>
          <div>
            <div class="text-xs font-bold text-white uppercase tracking-wide mb-1 group-hover:text-white transition-colors">Bandung</div>
            <div class="text-white/80 text-xs leading-relaxed group-hover:text-white transition-colors">Jl. Ir. H. Juanda No. 84, Lebakgede, Kec. Coblong</div>
          </div>
        </div>

        <div class="group bg-white/5 hover:bg-white/10 rounded-2xl p-4 transition-all duration-300 flex gap-4 items-start border border-transparent hover:border-white/10">
          <div class="w-10 h-10 shrink-0 bg-white/20 rounded-xl flex items-center justify-center text-white group-hover:bg-white group-hover:text-ultimate-navy transition-all duration-300 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.13.88.37 1.73.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.81.25 1.93.57 2.81.7A2 2 0 0 1 22 16.92z"
              ></path></svg
            >
          </div>
          <div>
            <div class="text-xs font-bold text-white uppercase tracking-wide mb-1 group-hover:text-white transition-colors">WhatsApp</div>
            <a href="https://wa.me/6283812310368" class="text-white/80 text-xs leading-relaxed group-hover:text-white transition-colors block">+62 838 1231 0368</a>
          </div>
        </div>

        <div class="group bg-white/5 hover:bg-white/10 rounded-2xl p-4 transition-all duration-300 flex gap-4 items-start border border-transparent hover:border-white/10">
          <div class="w-10 h-10 shrink-0 bg-white/20 rounded-xl flex items-center justify-center text-white group-hover:bg-white group-hover:text-ultimate-navy transition-all duration-300 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.13.88.37 1.73.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.81.25 1.93.57 2.81.7A2 2 0 0 1 22 16.92z"
              ></path></svg
            >
          </div>
          <div>
            <div class="text-xs font-bold text-white uppercase tracking-wide mb-1 group-hover:text-white transition-colors">Telepon</div>
            <a href="tel:02150913616" class="text-white/80 text-xs leading-relaxed group-hover:text-white transition-colors block">(021) 5091 3616</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ═══════════════════════════════════════════ -->
  <!-- ROW 2: Program Tags by Category            -->
  <!-- ═══════════════════════════════════════════ -->
  <div class="border-t border-white/10 bg-white/[0.02]">
    <div class="container mx-auto py-10 md:py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-12">
        {
          programCategories.map((cat) => (
            <div class="flex flex-col h-full">
              <div class="flex items-center gap-3 mb-6">
                <div class="h-0.5 bg-white/20 w-8" />
                <span class="text-xs font-bold text-white uppercase tracking-widest whitespace-nowrap">{cat.label}</span>
                <div class="h-0.5 bg-white/20 flex-grow" />
              </div>

              <div class="flex flex-col gap-2 flex-grow">
                <div class="flex flex-wrap gap-2.5 content-start">
                  {cat.items.map((item) => (
                    <a
                      href={item.href}
                      class:list={[
                        "px-3.5 py-1.5 rounded-lg text-[13px] font-medium transition-all duration-200 border",
                        currentPath.startsWith(item.href)
                          ? "bg-white text-ultimate-navy border-white shadow-[0_0_15px_rgba(255,255,255,0.3)] font-bold"
                          : "bg-white/10 text-white/90 border-white/10 hover:bg-white hover:text-ultimate-navy hover:border-white",
                      ]}
                    >
                      {item.name}
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- ═══════════════════════════════════════════ -->
  <!-- ROW 3: Company Links + Copyright           -->
  <!-- ═══════════════════════════════════════════ -->
  <div class="border-t border-white/10">
    <div class="container mx-auto py-6 flex flex-col md:flex-row justify-between items-center gap-4">
      <nav class="flex flex-wrap justify-center md:justify-start items-center gap-x-6 gap-y-3">
        {
          companyLinks.map((link) => (
            <a href={link.href} class:list={["text-xs font-medium transition-colors duration-200", currentPath === link.href ? "text-white font-bold" : "text-white/60 hover:text-white"]}>
              {link.name}
            </a>
          ))
        }
      </nav>
      <div class="text-white/50 text-xs flex flex-col sm:flex-row items-center gap-1.5 text-center sm:text-left">
        <span>&copy; {currentYear} <span class="text-white font-semibold">Ultimate Education</span>.</span>
        <span class="hidden sm:inline">All rights reserved</span>
      </div>
    </div>
  </div>
</footer>
