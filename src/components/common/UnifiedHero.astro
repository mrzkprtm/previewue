---
interface Props {
    title: string;
    subtitle?: string;
    pillText?: string;
    image?: string;
    showPatterns?: boolean;
}

const { title, subtitle, pillText = "Ultimate Education", image = "/images/hero_img.png", showPatterns = true } = Astro.props;
---

<section class="relative pb-16 lg:pb-0 bg-hero-gradient overflow-hidden lg:max-h-[300px] lg:flex lg:items-center">
    <!-- Decorative element -->
    <!-- Hero Decoration (Image & Semi-circle) -->
    <div class="absolute inset-0 hidden lg:flex pointer-events-none z-10">
        <div class="container mx-auto px-6 w-full flex items-end justify-end">
            <div class="relative w-[35%] h-full flex flex-col items-center justify-end">
                <!-- Semi-circle background -->
                <div class="absolute top-0 w-[360px] h-[180px] bg-ultimate-yellow rounded-b-full left-1/3 -translate-y-[54px] z-0"></div>
                <!-- Hero Image Overlay -->
                <img src={image} alt="Ilustrasi siswa belajar" class="absolute z-10 h-[85%] w-auto object-contain object-bottom left-[73%] -translate-x-1/2" />
            </div>
        </div>
    </div>

    <!-- Background Patterns -->
    {showPatterns && <div class="absolute inset-0 opacity-20 pointer-events-none z-0" style="background-image: url('/images/pattern_2.svg'); background-size: 100% 100%; background-position: left center;" />}
    <div class="w-full relative z-20 text-left">
        <div class="container mx-auto px-6 pt-8 lg:pt-10">
            <div class="lg:w-1/2 max-w-2xl">
                {pillText && <div class="inline-block px-4 py-1.5 rounded-full bg-white/10 border border-white/20 text-ultimate-yellow text-sm font-semibold mb-4 animate-float">{pillText}</div>}
                <h1 class="font-heading font-extrabold text-white text-4xl md:text-5xl lg:text-6xl mb-4 leading-snug" set:html={title} />

                {subtitle && <p class="text-slate-300 text-base md:text-lg lg:text-xl mb-8 leading-relaxed font-light" set:html="Panduan terbaru tentang persiapan tes internasional dan beasiswa luar negeri" />}
            </div>
        </div>
    </div>
</section>
