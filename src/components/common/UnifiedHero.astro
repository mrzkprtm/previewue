---
interface Props {
    title: string;
    subtitle?: string;
    pillText?: string;
    image?: string;
    showPatterns?: boolean;
}

const { title, subtitle, pillText = "Ultimate Education", image = "/images/hero_img.png", showPatterns = true } = Astro.props;
---

<section class="relative pt-32 pb-20 bg-hero-gradient overflow-hidden">
    <!-- Decorative element -->
    <!-- Hero Decoration (Image & Semi-circle) -->
    <div class="absolute inset-y-0 right-0 hidden lg:flex flex-col items-center justify-end h-full w-[40%] pointer-events-none z-10 pr-0 xl:pr-10">
        <!-- Semi-circle background -->
        <div class="absolute bottom-0 w-[48%] h-auto aspect-[2/1] bg-ultimate-yellow rounded-t-full left-1/2 -translate-x-1/2 z-0"></div>
        <!-- Hero Image Overlay -->
        <img src={image} alt="Hero Decoration" class="relative z-10 h-[70%] w-auto object-contain object-bottom" />
    </div>

    <!-- Background Patterns -->
    {showPatterns && <div class="absolute inset-0 opacity-20 pointer-events-none z-0" style="background-image: url('/images/pattern_2.svg'); background-size: 100% 100%; background-position: left center;" />}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20 text-center lg:text-left">
        <div class="lg:w-1/2">
            {pillText && <div class="inline-block px-4 py-1.5 rounded-full bg-white/10 border border-white/20 text-ultimate-yellow text-sm font-semibold mb-6 animate-float">{pillText}</div>}
            <h1 class="font-heading font-extrabold text-white text-4xl md:text-6xl mb-6 leading-tight" set:html={title} />

            {subtitle && <p class="text-slate-300 text-lg md:text-xl mb-10 leading-relaxed font-light" set:html={subtitle} />}

            <slot />
        </div>
    </div>
</section>
