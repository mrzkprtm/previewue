<style>
  .contact-header {
    text-align: center;
    padding: 3rem 0;
    margin-bottom: 2rem;
  }

  .contact-header h1 {
    margin-bottom: 1rem;
  }

  .contact-header p {
    color: #666;
    font-size: 1.1rem;
  }

  /* Contact Info */
  .contact-info {
    margin: 3rem 0;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .info-card {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .info-card:hover {
    border-color: #0066cc;
    box-shadow: 0 8px 24px rgba(0, 102, 204, 0.1);
    transform: translateY(-4px);
  }

  .info-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .info-card h3 {
    margin-bottom: 1rem;
    color: #0066cc;
  }

  .info-card p {
    color: #666;
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .info-card a {
    color: #0066cc;
    font-weight: 600;
  }

  .info-card a:hover {
    text-decoration: underline;
  }

  /* About Section */
  .about-section {
    background: #f8f9fa;
    padding: 3rem 2rem;
    border-radius: 8px;
    margin: 3rem 0;
  }

  .about-section h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .about-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .about-content p {
    color: #666;
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  /* Social Section */
  .social-section {
    text-align: center;
    margin: 4rem 0;
  }

  .social-section h2 {
    margin-bottom: 1rem;
  }

  .social-section p {
    color: #666;
    margin-bottom: 2rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-links a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #0066cc;
    color: white;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-links a:hover {
    background: #0052a3;
    transform: translateY(-2px);
  }

  /* Partnership Section */
  .partnership-section {
    background: linear-gradient(135deg, #f8f9fa, #fff);
    border: 2px solid #0066cc;
    padding: 3rem 2rem;
    border-radius: 8px;
    text-align: center;
    margin: 3rem 0;
  }

  .partnership-section h2 {
    color: #0066cc;
    margin-bottom: 1rem;
  }

  .partnership-section p {
    color: #666;
    margin-bottom: 1rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* FAQ Section */
  .faq-section {
    margin: 4rem 0;
  }

  .faq-section h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .faq-list {
    display: grid;
    gap: 1rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .faq-item {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    overflow: hidden;
    cursor: pointer;
  }

  .faq-item summary {
    padding: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none;
    transition: background 0.3s ease;
  }

  .faq-item summary:hover {
    background: #f8f9fa;
  }

  .faq-item summary::after {
    content: '‚ñº';
    font-size: 0.8rem;
    transition: transform 0.3s ease;
  }

  .faq-item[open] summary::after {
    transform: rotate(180deg);
  }

  .faq-item p {
    padding: 0 1.5rem 1.5rem;
    color: #666;
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #0066cc 0%, #0052a3 100%);
    color: white;
    padding: 3rem 0;
    border-radius: 8px;
    text-align: center;
    margin-top: 4rem;
  }

  .cta-section h2 {
    color: white;
    margin-bottom: 1rem;
  }

  .cta-section p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-decoration: none;
    text-align: center;
  }

  .btn-primary {
    background: #0066cc;
    color: white;
  }

  .btn-primary:hover {
    background: #0052a3;
    transform: translateY(-2px);
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
    }

    .social-links {
      gap: 0.5rem;
    }

    .social-links a {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
