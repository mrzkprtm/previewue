---
/**
 * OWNER: DYNAMIC (Dev B)
 * Scholarship pagination page.
 */
import Layout from "../../../layouts/Layout.astro";
import ScholarshipCard from "../../../components/scholarship/ScholarshipCard.astro";
import Pagination from "../../../components/blog/Pagination.astro";
import type { WPScholarship } from "../../../types/wp";

export const prerender = false;

const { page } = Astro.params;
const currentPage = parseInt(page || "1");

if (currentPage < 2) {
    return Astro.redirect("/beasiswa");
}

let scholarships: WPScholarship[] = [];
let totalPages = 1;
let error: string | null = null;

try {
    const { getScholarships } = await import("../../../lib/api/endpoints");
    const response = await getScholarships(currentPage, 9);
    scholarships = response.scholarships;
    totalPages = response.totalPages;
} catch (e) {
    console.error("Failed to fetch scholarships:", e);
    error = "Gagal memuat data beasiswa.";
    scholarships = []; // No mock data for pagination pages
}

const title = `Info Beasiswa - Halaman ${currentPage} | Ultimate Education`;
const description = `Halaman ${currentPage} - Informasi beasiswa luar negeri terbaru.`;
---

<Layout title={title} description={description}>
    <div class="bg-slate-50 min-h-screen">
        <!-- Hero Section Configured for Inner Pages -->
        <section class="bg-primary text-white py-12 relative overflow-hidden">
            <div class="absolute inset-0 bg-[url('/pattern-grid.svg')] opacity-5"></div>
            <div class="container mx-auto relative z-10 text-center">
                <h1 class="text-3xl font-semibold font-heading mb-2">Info Beasiswa</h1>
                <p class="text-blue-100">Halaman {currentPage}</p>
            </div>
        </section>

        <main class="container mx-auto py-12">
            {error && <div class="mb-6 px-4 py-3 bg-red-50 border border-red-200 text-red-800 rounded-xl text-base">{error}</div>}

            <!-- Scholarship Grid -->
            {
                scholarships.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {scholarships.map((scholarship) => (
                            <ScholarshipCard scholarship={scholarship} />
                        ))}
                    </div>
                ) : (
                    <div class="text-center py-20 bg-white rounded-3xl shadow-sm">
                        <div class="text-slate-400 mb-4">
                            <svg class="w-16 h-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                />
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Tidak ada data di halaman ini</h3>
                        <a href="/beasiswa" class="text-primary hover:underline font-medium">
                            Kembali ke halaman utama
                        </a>
                    </div>
                )
            }

            <!-- Pagination -->
            <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/beasiswa/page" rootUrl="/beasiswa" />
        </main>
    </div>
</Layout>
