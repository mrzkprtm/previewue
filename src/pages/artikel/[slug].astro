---
/**
 * OWNER: DYNAMIC (Dev B)
 * Blog detail page with full SEO, structured data, and internal linking.
 * SSR mode for dynamic slug handling.
 */
import Layout from "../../layouts/Layout.astro";
import UnifiedHero from "../../components/common/UnifiedHero.astro";
import type { WPPost } from "../../types/wp";

// SSR for dynamic routing
export const prerender = false;

const { slug } = Astro.params;

let post: WPPost | null = null;
let relatedPosts: WPPost[] = [];
let error: string | null = null;

try {
  const { getPostBySlug, getPosts } = await import("../../lib/api/endpoints");
  post = await getPostBySlug(slug!);

  if (post) {
    // Get related posts from same category
    const allPosts = await getPosts(1, 4);
    relatedPosts = allPosts.filter((p) => p.slug !== slug).slice(0, 3);
  }
} catch (e) {
  console.error("Failed to fetch post:", e);
  error = "Artikel tidak ditemukan";

  // Mock data
  post = {
    id: 1,
    slug: slug!,
    title: "Contoh Artikel Blog",
    content: `
      <p>Ini adalah contoh konten artikel blog. Artikel ini membahas tentang berbagai tips dan strategi untuk persiapan tes internasional.</p>
      <h2>Mengapa Persiapan Itu Penting?</h2>
      <p>Persiapan yang matang adalah kunci keberhasilan dalam tes apapun. Dengan memahami format tes dan berlatih secara konsisten, Anda akan lebih percaya diri saat hari H.</p>
      <h2>Tips Praktis</h2>
      <ul>
        <li>Buat jadwal belajar yang realistis</li>
        <li>Fokus pada kelemahan Anda</li>
        <li>Latihan soal secara rutin</li>
        <li>Istirahat yang cukup</li>
      </ul>
      <p>Dengan mengikuti tips di atas, Anda akan lebih siap menghadapi tes Anda. Jangan lupa untuk juga menjaga kesehatan fisik dan mental Anda selama masa persiapan.</p>
    `,
    excerpt: "<p>Tips dan strategi persiapan tes internasional</p>",
    date: "2026-02-05T10:00:00",
    featuredImage: {
      src: "https://images.unsplash.com/photo-1434030216411-0b793f4b4173?w=1200&h=600&fit=crop",
      alt: "Siswa belajar untuk persiapan tes",
    },
    author: { name: "Admin Ultimate Education", avatar: undefined },
    categories: [{ name: "IELTS", slug: "ielts" }],
  };

  relatedPosts = [
    {
      id: 2,
      slug: "beasiswa-chevening",
      title: "Beasiswa Chevening 2026",
      content: "",
      excerpt: "<p>Info beasiswa</p>",
      date: "2026-02-03T14:30:00",
      featuredImage: { src: "https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=400&h=300&fit=crop", alt: "Beasiswa" },
      author: { name: "Tim" },
      categories: [{ name: "Beasiswa", slug: "beasiswa" }],
    },
    {
      id: 3,
      slug: "toefl-writing",
      title: "TOEFL Writing Tips",
      content: "",
      excerpt: "<p>Tips TOEFL</p>",
      date: "2026-02-01T09:00:00",
      featuredImage: { src: "https://images.unsplash.com/photo-1455390582262-044cdead277a?w=400&h=300&fit=crop", alt: "TOEFL" },
      author: { name: "Mentor" },
      categories: [{ name: "TOEFL", slug: "toefl" }],
    },
    {
      id: 4,
      slug: "study-australia",
      title: "Study di Australia",
      content: "",
      excerpt: "<p>Info Australia</p>",
      date: "2026-01-28T11:00:00",
      featuredImage: { src: "https://images.unsplash.com/photo-1506973035872-a4ec16b8e8d9?w=400&h=300&fit=crop", alt: "Australia" },
      author: { name: "Konsultan" },
      categories: [{ name: "Study Abroad", slug: "study-abroad" }],
    },
  ];
}

if (!post) {
  return Astro.redirect("/artikel");
}

// Format date
function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString("id-ID", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

// Reading time estimate
function getReadingTime(content: string): number {
  const words = content.replace(/<[^>]*>/g, "").split(/\s+/).length;
  return Math.ceil(words / 200);
}

const readingTime = getReadingTime(post.content);
const canonicalUrl = `${Astro.url.origin}/artikel/${post.slug}`;

// SEO Structured Data
const articleStructuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.title,
  description: post.excerpt.replace(/<[^>]*>/g, "").substring(0, 160),
  image: post.featuredImage?.src || `${Astro.url.origin}/og-default.jpg`,
  datePublished: post.date,
  dateModified: post.date,
  author: {
    "@type": "Person",
    name: post.author?.name || "Ultimate Education",
    url: post.author ? `${Astro.url.origin}/artikel/author/${post.author.name.toLowerCase().replace(/\s+/g, "-")}` : undefined,
  },
  publisher: {
    "@type": "Organization",
    name: "Ultimate Education",
    logo: { "@type": "ImageObject", url: `${Astro.url.origin}/logo.png` },
  },
  mainEntityOfPage: { "@type": "WebPage", "@id": canonicalUrl },
  articleSection: post.categories[0]?.name || "Blog",
  wordCount: post.content.replace(/<[^>]*>/g, "").split(/\s+/).length,
};

const breadcrumbStructuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Home", item: Astro.url.origin },
    { "@type": "ListItem", position: 2, name: "Artikel", item: `${Astro.url.origin}/artikel` },
    { "@type": "ListItem", position: 3, name: post.title, item: canonicalUrl },
  ],
};
---

<Layout title={`${post.title} | Blog Ultimate Education`} description={post.excerpt.replace(/<[^>]*>/g, "").substring(0, 160)}>
  <Fragment slot="head">
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={post.title} />
    <meta property="og:description" content={post.excerpt.replace(/<[^>]*>/g, "").substring(0, 160)} />
    {post.featuredImage && <meta property="og:image" content={post.featuredImage.src} />}
    <meta property="article:published_time" content={post.date} />
    <meta property="article:author" content={post.author?.name || "Ultimate Education"} />
    {post.categories.map((cat) => <meta property="article:tag" content={cat.name} />)}
    <script type="application/ld+json" set:html={JSON.stringify(articleStructuredData)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbStructuredData)} />
  </Fragment>

  <div class="bg-slate-50 min-h-screen">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <UnifiedHero title={post.title} subtitle={post.excerpt.replace(/<[^>]*>/g, "").substring(0, 160)} pillText={post.categories[0]?.name || "Artikel"} image={post.featuredImage?.src} showPatterns={true}>
        <div class="mt-8 flex flex-wrap items-center gap-4 text-sm text-blue-100">
          {
            post.author && (
              <div class="flex items-center gap-2">
                {post.author.avatar ? (
                  <img src={post.author.avatar} alt={post.author.name} class="w-8 h-8 rounded-full object-cover border-2 border-white/20" loading="lazy" />
                ) : (
                  <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center">
                    <span class="text-white font-bold text-sm">{post.author.name.charAt(0)}</span>
                  </div>
                )}
                <span class="font-medium">{post.author.name}</span>
              </div>
            )
          }
          <span class="opacity-50">•</span>
          <time datetime={post.date}>{formatDate(post.date)}</time>
          <span class="opacity-50">•</span>
          <span>{readingTime} menit baca</span>
        </div>
      </UnifiedHero>

      <!-- Breadcrumb -->
      <nav class="pt-6 pb-4 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-slate-500">
          <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
          <li><span class="mx-1">/</span></li>
          <li><a href="/artikel" class="hover:text-primary transition-colors">Artikel</a></li>
          <li><span class="mx-1">/</span></li>
          {
            post.categories[0] && (
              <>
                <li>
                  <a href={`/artikel/category/${post.categories[0].slug}`} class="hover:text-primary transition-colors">
                    {post.categories[0].name}
                  </a>
                </li>
                <li>
                  <span class="mx-1">/</span>
                </li>
              </>
            )
          }
          <li class="text-slate-400 truncate max-w-[200px]">{post.title}</li>
        </ol>
      </nav>

      <article class="pb-12 lg:pb-16 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Article Header (Removed original header) -->
        <header class="mb-8 sr-only">
          <h1>{post.title}</h1>
        </header>

        <!-- Featured Image -->
        {
          post.featuredImage && (
            <figure class="mb-10">
              <img src={post.featuredImage.src} alt={post.featuredImage.alt} class="w-full h-auto max-h-[500px] object-cover rounded-2xl shadow-lg" loading="eager" />
              {post.featuredImage.alt && <figcaption class="text-center text-sm text-slate-400 mt-3">{post.featuredImage.alt}</figcaption>}
            </figure>
          )
        }

        <!-- Article Content -->
        <div class="bg-white rounded-2xl shadow-card p-6 lg:p-10 mb-10">
          <div class="prose prose-lg max-w-none prose-headings:font-heading prose-headings:text-gray-900 prose-a:text-primary prose-a:no-underline hover:prose-a:underline" set:html={post.content} />
        </div>

        <!-- Share & Tags -->
        <div class="flex flex-wrap items-center justify-between gap-4 py-6 border-t border-b border-slate-200 mb-10">
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-slate-600">Tags:</span>
            {
              post.categories.map((cat) => (
                <a href={`/artikel/category/${cat.slug}`} class="text-sm bg-slate-100 text-slate-600 px-3 py-1 rounded-full hover:bg-primary hover:text-white transition-colors">
                  {cat.name}
                </a>
              ))
            }
          </div>

          <div class="flex items-center gap-3">
            <span class="text-sm font-medium text-slate-600">Share:</span>
            <a
              href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(canonicalUrl)}&text=${encodeURIComponent(post.title)}`}
              target="_blank"
              rel="noopener"
              class="text-slate-400 hover:text-[#1DA1F2] transition-colors"
              aria-label="Share on Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path></svg
              >
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(canonicalUrl)}&title=${encodeURIComponent(post.title)}`}
              target="_blank"
              rel="noopener"
              class="text-slate-400 hover:text-[#0077B5] transition-colors"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path></svg
              >
            </a>
            <a href={`https://wa.me/?text=${encodeURIComponent(post.title + " " + canonicalUrl)}`} target="_blank" rel="noopener" class="text-slate-400 hover:text-[#25D366] transition-colors" aria-label="Share on WhatsApp">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path></svg
              >
            </a>
          </div>
        </div>

        <!-- Author Bio -->
        {
          post.author && (
            <div class="bg-white rounded-2xl shadow-card p-6 lg:p-8 mb-10">
              <div class="flex items-start gap-4">
                {post.author.avatar ? (
                  <img src={post.author.avatar} alt={post.author.name} class="w-16 h-16 rounded-full object-cover flex-shrink-0" loading="lazy" />
                ) : (
                  <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                    <span class="text-primary font-bold text-2xl">{post.author.name.charAt(0)}</span>
                  </div>
                )}
                <div>
                  <h3 class="font-bold text-lg text-gray-900 mb-1">
                    <a href={`/artikel/author/${post.author.name.toLowerCase().replace(/\s+/g, "-")}`} class="hover:text-primary transition-colors">
                      {post.author.name}
                    </a>
                  </h3>
                  <p class="text-slate-500 text-sm mb-3">Penulis di Ultimate Education</p>
                  <a href={`/artikel/author/${post.author.name.toLowerCase().replace(/\s+/g, "-")}`} class="text-sm text-primary font-medium hover:underline">
                    Lihat semua artikel →
                  </a>
                </div>
              </div>
            </div>
          )
        }

        <!-- Related Posts -->
        {
          relatedPosts.length > 0 && (
            <section>
              <h2 class="text-2xl font-bold font-heading text-gray-900 mb-6">Artikel Terkait</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {relatedPosts.map((relatedPost) => (
                  <a href={`/artikel/${relatedPost.slug}`} class="bg-white rounded-xl overflow-hidden shadow-card group hover:shadow-lg transition-shadow">
                    {relatedPost.featuredImage && (
                      <div class="h-40 overflow-hidden">
                        <img src={relatedPost.featuredImage.src} alt={relatedPost.featuredImage.alt} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
                      </div>
                    )}
                    <div class="p-4">
                      <h3 class="font-bold text-gray-900 line-clamp-2 group-hover:text-primary transition-colors">{relatedPost.title}</h3>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          )
        }
      </article>
    </main>
  </div>
</Layout>
