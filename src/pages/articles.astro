<Layout title="Blog - Ultimate Education" description="Baca tips dan panduan terbaru tentang persiapan tes internasional dan beasiswa dari para expert di Ultimate Education.">
  <!-- Header -->
  <section class="articles-header" role="region" aria-label="Header artikel">
    <h1>Blog & Artikel</h1>
    <p>Tips, panduan, dan berita terbaru seputar persiapan tes internasional dan beasiswa</p>
  </section>

  <!-- Category Filter -->
  <section class="filter-section" role="region" aria-label="Filter kategori artikel">
    <div class="filter-buttons">
      {categories.map((cat) => (
        <a 
          href={`?category=${cat}`}
          class={`filter-btn ${cat === selectedCategory ? 'active' : ''}`}
          role="button"
          aria-pressed={cat === selectedCategory}
        >
          {cat}
        </a>
      ))}
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="articles-section" role="region" aria-label="Daftar artikel">
    {filteredArticles.length > 0 ? (
      <div class="articles-grid">
        {filteredArticles.map((article) => (
          <article class="article-card" role="article">
            <div class="article-image">{article.image}</div>
            <div class="article-content">
              <div class="article-meta">
                <span class="category-badge">{article.category}</span>
                <span class="article-date">{article.date}</span>
              </div>
              <h3>
                <a href={`/articles/${article.slug}`}>{article.title}</a>
              </h3>
              <p class="article-excerpt">{article.excerpt}</p>
              <div class="article-footer">
                <span class="article-author">Oleh {article.author}</span>
                <a href={`/articles/${article.slug}`} class="read-more">Baca Selengkapnya â†’</a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="no-articles">
        <p>Tidak ada artikel dalam kategori ini. Coba pilih kategori lain.</p>
      </div>
    )}
  </section>

  <!-- Newsletter CTA -->
  <section class="newsletter-section" role="region" aria-label="Berlangganan newsletter">
    <h2>Jangan Lewatkan Update Terbaru</h2>
    <p>Daftarkan email Anda untuk mendapatkan tips dan panduan terbaru langsung ke inbox Anda</p>
    <form class="newsletter-form">
      <input 
        type="email" 
        placeholder="Masukkan email Anda" 
        required 
        aria-label="Email untuk newsletter"
      />
      <button type="submit">Berlangganan</button>
    </form>
  </section>
</Layout>

<style>
  .articles-header {
