    color: #666;
    font-size: 1.1rem;
  }

  /* Filter Section */
  .filter-section {
    text-align: center;
    margin: 2rem 0 3rem;
  }

  .filter-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .filter-btn {
