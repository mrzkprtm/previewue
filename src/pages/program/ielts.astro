---
import Layout from "../../layouts/Layout.astro";
import UnifiedHero from "../../components/common/UnifiedHero.astro";
import CourseOverview from "../../components/program/detail/CourseOverview.astro";
import ProgramPricingTabs from "../../components/program/detail/ProgramPricingTabs.jsx";
import InteractiveCalendar from "../../components/program/detail/InteractiveCalendar.jsx";
import HomeSuccessCTA from "../../components/home/HomeSuccessCTA.astro";
import PaymentRoadmap from "../../components/program/detail/PaymentRoadmap.jsx";
import IeltsWhyUs from "../../components/program/detail/IeltsWhyUs.astro";
import IeltsAlumni from "../../components/program/detail/IeltsAlumni.astro";
import IeltsFAQ from "../../components/program/detail/IeltsFAQ.astro";
import WhyChooseUs from "@/components/home/WhyChooseUs.astro";
---

<Layout title="Kursus Persiapan IELTS - Ultimate Education" description="Raih skor IELTS impianmu dengan bimbingan intensif, tutor berpengalaman, dan fasilitas lengkap di Ultimate Education.">
    <main>
        <!-- 1. Hero -->
        <UnifiedHero title='Kursus Persiapan <span class="text-ultimate-yellow">IELTS</span>' subtitle="Raih skor impianmu dengan bimbingan intensif dari pengajar ahli" pillText="IELTS Preparation" />

        <!-- 2. Gambaran Kursus -->
        <CourseOverview />

        <!-- 3. Topik & Pricing Tabs -->
        <ProgramPricingTabs client:load />

        <!-- 4. Jadwal Kelas -->
        <InteractiveCalendar client:load />

        <!-- 5. Success CTA -->
        <HomeSuccessCTA />

        <!-- 6. Alur Pembayaran -->
        <PaymentRoadmap client:load />

        <!-- 7. Kenapa Kami? -->
        <WhyChooseUs />

        <!-- 8. Cerita Alumni -->
        <IeltsAlumni />

        <!-- 9. FAQ -->
        <IeltsFAQ />
    </main>
</Layout>
