---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/ui/Button.astro";
import UnifiedHero from "../../components/common/UnifiedHero.astro";
import { allPrograms } from "../../data/programs";

export function getStaticPaths() {
    return allPrograms.map((program) => ({
        params: { slug: program.slug },
        props: { program },
    }));
}

const { program } = Astro.props;
---

<Layout title={`${program.name} - Ultimate Education`} description={program.description}>
    <!-- Hero Section -->
    <!-- Hero Section -->
    <UnifiedHero title={`Kursus Persiapan <span class="text-ultimate-yellow">${program.name}</span>`} subtitle={program.description} pillText="Kursus Intensif" image={program.image} />

    <!-- Content Layout -->
    <section class="py-12 bg-slate-50">
        <div class="container mx-auto px-6">
            <div class="flex flex-col lg:flex-row gap-8">
                <!-- Left Column: Main Content -->
                <div class="lg:w-2/3 space-y-12">
                    <!-- Gambaran Kursus -->
                    <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
                        <h2 class="text-2xl font-bold text-ultimate-navy mb-4 border-b pb-4">Gambaran Kursus</h2>
                        <div class="prose max-w-none text-gray-600 leading-relaxed">
                            <p>
                                Program <strong>{program.name}</strong> di Ultimate Education dirancang khusus untuk membantu siswa mencapai skor maksimal. Dengan metode pembelajaran yang terstruktur dan pengajar yang berpengalaman, Anda akan
                                dibimbing untuk memahami setiap aspek tes dengan baik.
                            </p>
                            <p class="mt-4">
                                Program ini mencakup {program.curriculum ? program.curriculum.length : "berbagai"} modul pembelajaran intensif, latihan soal otentik, serta personal feedback untuk memastikan peningkatan kemampuan Anda secara signifikan.
                            </p>
                        </div>
                    </div>

                    <!-- Kurikulum / Topik -->
                    {
                        program.curriculum && (
                            <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
                                <h2 class="text-2xl font-bold text-ultimate-navy mb-6 border-b pb-4">Topik Pembelajaran</h2>
                                <div class="grid gap-4">
                                    {program.curriculum.map((item, index) => (
                                        <div class="flex items-center gap-4 p-4 rounded-xl bg-slate-50 border border-slate-100 hover:border-ultimate-blue/30 transition-colors">
                                            <div class="w-8 h-8 rounded-full bg-ultimate-blue text-white flex items-center justify-center font-bold text-base shrink-0">{index + 1}</div>
                                            <span class="font-medium text-gray-800">{item}</span>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )
                    }

                    <!-- Schedule Mock -->
                    <div class="bg-ultimate-navy rounded-2xl p-8 shadow-lg text-white relative overflow-hidden">
                        <div class="relative z-10">
                            <h2 class="text-2xl font-bold mb-6 text-center">Jadwal Kelas {program.name} di Ultimate Education</h2>
                            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 text-center">
                                <p class="text-lg mb-4">ðŸ“… Kelas tersedia setiap bulan!</p>
                                <p class="mb-6">Hubungi admin kami untuk mendapatkan jadwal terupdate yang sesuai dengan kesibukan Anda (Online/Offline).</p>
                                <Button
                                    href="https://api.whatsapp.com/send/?phone=6283812310368&text=Halo%20Admin,%20saya%20ingin%20tanya%20jadwal%20kelas"
                                    class="bg-white text-ultimate-navy hover:bg-ultimate-yellow font-bold px-8 py-2 rounded-lg"
                                    target="_blank"
                                >
                                    Cek Jadwal Terbaru
                                </Button>
                            </div>
                        </div>
                    </div>

                    <!-- Why Us -->
                    {
                        program.benefits && (
                            <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
                                <h2 class="text-2xl font-bold text-ultimate-navy mb-6">Kenapa Kami?</h2>
                                <div class="grid md:grid-cols-2 gap-6">
                                    {program.benefits.map((benefit, index) => (
                                        <div class="flex items-start gap-4">
                                            <div class="w-10 h-10 rounded-lg bg-blue-50 text-ultimate-blue flex items-center justify-center text-xl shrink-0">âœ“</div>
                                            <div>
                                                <h4 class="font-bold text-gray-900">{benefit}</h4>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )
                    }
                </div>

                <!-- Right Column: Sidebar -->
                <div class="lg:w-1/3">
                    <div class="sticky top-24 space-y-6">
                        <!-- Pricing Card -->
                        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-100 transform hover:-translate-y-1 transition-transform duration-300">
                            <div class="bg-ultimate-blue p-6 text-white text-center">
                                <p class="text-base font-bold uppercase opacity-90 tracking-widest mb-1">Paket Belajar</p>
                                <h3 class="text-2xl font-bold">{program.name} Intensive</h3>
                            </div>
                            <div class="p-6">
                                <div class="text-center mb-6">
                                    <span class="text-3xl font-black text-slate-800 block">{program.price || "Hubungi Kami"}</span>
                                    <span class="text-base text-slate-500 font-medium">{program.priceNote || "untuk info harga"}</span>
                                </div>

                                <ul class="space-y-4 mb-8">
                                    <li class="flex items-center gap-3 text-base text-gray-600">
                                        <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg
                                        >
                                        {program.duration}
                                    </li>
                                    <li class="flex items-center gap-3 text-base text-gray-600">
                                        <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg
                                        >
                                        {program.includes}
                                    </li>
                                    <li class="flex items-center gap-3 text-base text-gray-600">
                                        <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg
                                        >
                                        Sertifikat
                                    </li>
                                    <li class="flex items-center gap-3 text-base text-gray-600">
                                        <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg
                                        >
                                        Konsultasi Gratis
                                    </li>
                                </ul>

                                <Button
                                    href="https://api.whatsapp.com/send/?phone=6283812310368"
                                    class="w-full justify-center bg-ultimate-navy text-white hover:bg-ultimate-blue font-bold py-3 rounded-xl shadow-lg hover:shadow-xl transition-all"
                                    target="_blank"
                                >
                                    Daftar Sekarang
                                </Button>
                                <p class="text-center text-base text-gray-400 mt-4">*Harga dapat berubah sewaktu-waktu</p>
                            </div>
                        </div>

                        <!-- Contact Card -->
                        <div class="bg-white rounded-2xl p-6 shadow-md border border-slate-100">
                            <h4 class="font-bold text-gray-900 mb-2">Butuh Bantuan?</h4>
                            <p class="text-base text-gray-600 mb-4">Konsultasikan kebutuhan belajarmu dengan tim ahli kami secara gratis.</p>
                            <a href="https://wa.me/6283812310368" target="_blank" class="flex items-center gap-3 text-ultimate-blue font-bold text-base hover:underline">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                                    ><path
                                        d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.506-.669-.514-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.876 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.084 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                                    ></path></svg
                                >
                                Chat WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bottom CTA -->
    <section class="py-20">
        <div class="container mx-auto px-6">
            <div class="bg-ultimate-blue rounded-3xl p-12 text-center text-white relative overflow-hidden">
                <div class="relative z-10">
                    <h2 class="text-3xl font-bold font-heading mb-6">{program.name} Preparation Online dan Offline - Terdekat dan Terpercaya!</h2>
                    <Button
                        href="https://api.whatsapp.com/send/?phone=6283812310368"
                        class="bg-ultimate-yellow text-ultimate-navy font-bold px-10 py-4 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all text-lg"
                        target="_blank"
                    >
                        Join Your Class
                    </Button>
                </div>
                <div class="absolute inset-0 bg-pattern opacity-10"></div>
            </div>
        </div>
    </section>
</Layout>
