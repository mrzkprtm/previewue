---
import Layout from "../../layouts/Layout.astro";
import { programs } from "../../data/programData";

export function getStaticPaths() {
    return programs.map((program) => ({
        params: { slug: program.slug },
        props: { program },
    }));
}

const { program } = Astro.props;

const title = `${program.title} | Ultimate Education`;
const description = program.subtitle;
---

<Layout title={title} description={description}>
    <!-- Hero Section -->
    <header class="bg-[#0F4C81] text-white pt-32 pb-20 relative overflow-hidden">
        <!-- Abstract Shapes Background -->
        <div class="absolute top-0 right-0 w-1/2 h-full bg-blue-800/20 rounded-l-full transform translate-x-1/3 -skew-x-12"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-yellow-500/10 rounded-full blur-3xl"></div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 flex flex-col md:flex-row items-center gap-12">
            <div class="flex-1 text-center md:text-left">
                <span class="inline-block bg-yellow-400 text-blue-900 text-xs font-bold px-3 py-1 rounded-full mb-4">
                    {program.category}
                </span>
                <h1 class="text-4xl md:text-6xl font-bold font-heading mb-6 leading-tight">
                    Kursus Persiapan <span class="text-yellow-400">{program.title.replace("Ultimate ", "")}</span>
                </h1>
                <p class="text-lg text-blue-100 mb-8 max-w-xl">
                    {program.subtitle}. Dapatkan skor impianmu dengan metode belajar proven dan tutor expert.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                    <a href="#pricing" class="bg-yellow-400 hover:bg-yellow-300 text-blue-900 font-bold py-3 px-8 rounded-full transition-colors shadow-lg shadow-yellow-400/20"> Daftar Sekarang </a>
                    <a href="#curriculum" class="bg-white/10 hover:bg-white/20 text-white font-bold py-3 px-8 rounded-full transition-colors border border-white/20 backdrop-blur-sm"> Lihat Kurikulum </a>
                </div>
            </div>
            <div class="flex-1 relative hidden md:block">
                <img src="/student-hero.png" alt="Student Success" class="relative z-10 w-full max-w-lg mx-auto drop-shadow-2xl" onerror="this.src='https://placehold.co/500x600/transparent/white?text=Student+Image'" />
            </div>
        </div>
    </header>

    <main class="bg-slate-50 min-h-screen py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Left Content -->
                <div class="lg:col-span-2 space-y-16">
                    <!-- Gambaran Kursus -->
                    <section id="overview" class="bg-white rounded-3xl p-8 shadow-sm border border-slate-100">
                        <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
                            <span class="w-2 h-8 bg-blue-600 rounded-full"></span>
                            Gambaran Kursus
                        </h2>
                        <div class="prose prose-lg text-slate-600 max-w-none">
                            <p>{program.description}</p>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
                                {
                                    program.benefits.map((benefit) => (
                                        <div class="flex items-start gap-3">
                                            <svg class="w-6 h-6 text-green-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                            </svg>
                                            <span class="font-medium text-slate-700">{benefit}</span>
                                        </div>
                                    ))
                                }
                            </div>
                        </div>
                    </section>

                    <!-- Topik / Kurikulum -->
                    <section id="curriculum">
                        <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
                            <span class="w-2 h-8 bg-yellow-400 rounded-full"></span>
                            Topik Pembelajaran
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {
                                program.topics.map((topic, index) => (
                                    <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 hover:border-blue-200 transition-colors">
                                        <div class="flex items-center gap-4 mb-4">
                                            <div
                                                class={`w-12 h-12 rounded-xl flex items-center justify-center text-white font-bold text-xl
                                ${index % 4 === 0 ? "bg-blue-500" : index % 4 === 1 ? "bg-purple-500" : index % 4 === 2 ? "bg-pink-500" : "bg-orange-500"}`}
                                            >
                                                {index + 1}
                                            </div>
                                            <h3 class="text-xl font-bold text-slate-800">{topic.title}</h3>
                                        </div>
                                        <ul class="space-y-3">
                                            {topic.content.map((item) => (
                                                <li class="flex items-start gap-2 text-slate-600 text-sm">
                                                    <span class="w-1.5 h-1.5 rounded-full bg-slate-300 mt-2 shrink-0" />
                                                    {item}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                ))
                            }
                        </div>
                    </section>

                    <!-- Jadwal Kelas (Calendar Placeholder) -->
                    <section id="schedule" class="bg-white rounded-3xl p-8 shadow-sm border border-slate-100 overflow-hidden">
                        <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-3">
                            <span class="w-2 h-8 bg-purple-600 rounded-full"></span>
                            Jadwal Kelas
                        </h2>
                        <div class="bg-slate-50 rounded-2xl p-6 text-center border border-slate-200">
                            <p class="text-slate-600 mb-6">Jadwal kelas tersedia untuk Online & Offline. Silakan hubungi admin untuk ketersediaan slot terbaru.</p>

                            {/* Visual Calendar Mockup */}
                            <div class="grid grid-cols-7 gap-2 max-w-md mx-auto mb-6 text-xs font-bold text-slate-400 uppercase tracking-widest">
                                <span>Mon</span><span>Tue</span><span>Wed</span><span>Thu</span><span>Fri</span><span class="text-red-400">Sat</span><span class="text-red-400">Sun</span>
                            </div>
                            <div class="grid grid-cols-7 gap-2 max-w-md mx-auto mb-8">
                                {
                                    Array.from({ length: 30 }).map((_, i) => (
                                        <div
                                            class={`aspect-square rounded-lg flex items-center justify-center text-sm font-medium
                             ${[2, 5, 9, 12, 16, 19, 23, 26].includes(i + 1) ? "bg-blue-100 text-blue-700 ring-1 ring-blue-200" : "text-slate-400"}
                         `}
                                        >
                                            {i + 1}
                                        </div>
                                    ))
                                }
                            </div>

                            <a href="https://wa.me/6281234567890?text=Halo%20Admin,%20saya%20mau%20tanya%20jadwal%20kelas%20IELTS" target="_blank" class="inline-flex items-center gap-2 text-primary font-bold hover:underline">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                                    ><path
                                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                                    ></path></svg
                                >
                                Cek Slot via WhatsApp
                            </a>
                        </div>
                    </section>

                    <!-- Enrollment Flow -->
                    <section>
                        <h2 class="text-2xl font-bold text-slate-800 mb-8 text-center">Cara Mendaftar</h2>
                        <div class="relative max-w-3xl mx-auto">
                            {/* Line */}
                            <div class="absolute left-6 top-6 bottom-6 w-0.5 bg-slate-200 md:left-1/2 md:-ml-px"></div>

                            {
                                [
                                    { title: "Kirim Data Diri", desc: "Kirimkan nama lengkap dan alamat email aktif kamu ke tim UE.", number: "1" },
                                    { title: "Tunggu Konfirmasi", desc: "Kami akan kirim invoice & link formulir ke email kamu.", number: "2" },
                                    { title: "Lengkapi Formulir", desc: "Lengkapi data biar pendaftaranmu cepat diproses.", number: "3" },
                                    { title: "Lakukan Pembayaran", desc: "Transfer sesuai invoice, mudah & fleksibel!", number: "4" },
                                ].map((step, i) => (
                                    <div class={`relative flex items-center mb-8 last:mb-0 ${i % 2 === 0 ? "md:flex-row-reverse" : ""}`}>
                                        <div class="flex-1 md:w-1/2" />

                                        <div class="absolute left-0 md:left-1/2 md:-ml-6 w-12 h-12 bg-white border-4 border-blue-500 rounded-full flex items-center justify-center font-bold text-blue-500 z-10 shadow-sm">{step.number}</div>

                                        <div class={`flex-1 md:w-1/2 pl-16 md:pl-0 ${i % 2 === 0 ? "md:pr-12 md:text-right" : "md:pl-12"}`}>
                                            <div class="bg-white p-6 rounded-2xl border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
                                                <h3 class="font-bold text-lg text-slate-800 mb-2">{step.title}</h3>
                                                <p class="text-sm text-slate-600">{step.desc}</p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </section>
                </div>

                <!-- Sidebar -->
                <aside class="space-y-8 lg:sticky lg:top-8 h-fit">
                    <!-- Pricing Card -->
                    <div id="pricing" class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 relative overflow-hidden">
                        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-500 to-cyan-400"></div>

                        <h3 class="text-xl font-bold text-slate-800 mb-4">Pilih Paket Belajar</h3>

                        {/* Toggle (Mockup) */}
                        <div class="flex bg-slate-100 p-1 rounded-xl mb-6">
                            <button class="flex-1 py-2 text-sm font-bold rounded-lg bg-white text-slate-800 shadow-sm transition-all">Online</button>
                            <button class="flex-1 py-2 text-sm font-bold rounded-lg text-slate-500 hover:text-slate-700 transition-all">Offline</button>
                        </div>

                        <div class="text-center mb-6">
                            <span class="text-slate-400 text-sm line-through">Rp 3.000.000</span>
                            <div class="flex items-center justify-center gap-2">
                                <span class="text-4xl font-bold text-slate-900">Rp {program.pricing?.online.toLocaleString("id-ID")}</span>
                            </div>
                            <span class="inline-block bg-green-100 text-green-700 text-xs font-bold px-2 py-0.5 rounded mt-2">Hemat 50%</span>
                        </div>

                        <ul class="space-y-3 mb-8">
                            {
                                program.benefits.slice(0, 5).map((benefit) => (
                                    <li class="flex items-center gap-3 text-sm text-slate-600">
                                        <svg class="w-5 h-5 text-blue-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                        {benefit}
                                    </li>
                                ))
                            }
                        </ul>

                        <button class="w-full bg-[#0F4C81] hover:bg-[#0d4270] text-white font-bold py-4 rounded-xl transition-all shadow-lg shadow-blue-900/20 active:scale-95"> Daftar Sekarang </button>
                        <p class="text-xs text-center text-slate-400 mt-4">Garansi skor meningkat atau uang kembali*</p>
                    </div>

                    <!-- FAQ Widget -->
                    <div class="bg-blue-50 rounded-3xl p-6 border border-blue-100">
                        <h3 class="font-bold text-blue-900 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            FAQ Singkat
                        </h3>
                        <div class="space-y-4">
                            {
                                program.faq.slice(0, 3).map((item) => (
                                    <div class="bg-white p-4 rounded-xl shadow-sm cursor-pointer hover:shadow-md transition-shadow">
                                        <h4 class="font-bold text-sm text-slate-800 mb-1">{item.question}</h4>
                                        <p class="text-xs text-slate-500 line-clamp-2">{item.answer}</p>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </main>
</Layout>
