---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/ui/Button.astro";
import UnifiedHero from "../../components/common/UnifiedHero.astro";
import ProgramPainPoints from "../../components/program/ProgramPainPoints.astro";
import ProgramWhyUs from "../../components/program/ProgramWhyUs.astro";
import ProgramPricing from "../../components/program/ProgramPricing.astro";
import ProgramTarget from "../../components/program/ProgramTarget.astro";
import ProgramCurriculum from "../../components/program/ProgramCurriculum.astro";
import ProgramProcess from "../../components/program/ProgramProcess.astro";
import ProgramFAQ from "../../components/program/ProgramFAQ.astro";
import ProgramTabs from "../../components/program/ProgramTabs.astro";
import { allPrograms } from "../../data/programs";

export function getStaticPaths() {
    return allPrograms.map((program) => ({
        params: { slug: program.slug },
        props: { program },
    }));
}

const { program } = Astro.props;
---

<Layout title={`${program.name} - Ultimate Education`} description={program.description}>
    <!-- Hero Section -->
    <UnifiedHero title={`Kursus Persiapan <span class="text-ultimate-yellow">${program.name}</span>`} subtitle={program.description} pillText="Program Intensif" image="/images/hero_img.png" />

    <!-- Main Content Layout -->
    <div class="container mx-auto px-6 py-12 md:py-20">
        <div class="flex flex-col lg:flex-row gap-12 relative">
            <!-- LEFT COLUMN: Educational Content -->
            <div class="w-full lg:w-2/3 space-y-12">
                <!-- Gambaran Kursus: Tab/Accordion (Group, Private, WHV, Custom, Bundling) -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-ultimate-navy mb-4 border-b border-slate-100 pb-4">Gambaran Kursus</h2>
                    <ProgramTabs program={program} />
                </div>

                <!-- Pain Points & Solutions -->
                <ProgramPainPoints programName={program.name} />

                <!-- Why Us -->
                <ProgramWhyUs benefits={program.benefits} />

                <!-- Target Audience -->
                <ProgramTarget />

                <!-- Curriculum -->
                <ProgramCurriculum curriculum={program.curriculum} />

                <!-- Process -->
                <ProgramProcess />

                <!-- FAQ -->
                <ProgramFAQ faqs={program.faqs} />
            </div>

            <!-- RIGHT COLUMN: Sticky Sidebar -->
            <div class="w-full lg:w-1/3">
                <div class="sticky top-24 space-y-6">
                    <!-- Pricing / Booking Card -->
                    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100 transform hover:-translate-y-1 transition-transform duration-300 relative z-10">
                        <div class="bg-ultimate-blue p-6 text-white text-center relative overflow-hidden">
                            <div class="relative z-10">
                                <p class="text-xs font-bold uppercase opacity-90 tracking-widest mb-1">Paket {program.name}</p>
                                <h3 class="text-2xl font-bold">Intensive Class</h3>
                            </div>
                            <!-- Decorator -->
                            <div class="absolute top-0 right-0 w-24 h-24 bg-white opacity-10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>
                        </div>
                        <div class="p-6">
                            <div class="text-center mb-6">
                                <span class="text-3xl font-black text-slate-800 block">{program.price || "Hubungi Kami"}</span>
                                <span class="text-sm text-slate-500 font-medium">{program.priceNote || "untuk 20 sesi pertemuan"}</span>
                            </div>

                            <ul class="space-y-3 mb-8">
                                <li class="flex items-center gap-3 text-sm text-slate-600">
                                    <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                    {program.duration}
                                </li>
                                <li class="flex items-center gap-3 text-sm text-slate-600">
                                    <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                    {program.includes}
                                </li>
                                <li class="flex items-center gap-3 text-sm text-slate-600">
                                    <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                    Sertifikat Resmi
                                </li>
                                <li class="flex items-center gap-3 text-sm text-slate-600">
                                    <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                    Konsultasi Gratis
                                </li>
                            </ul>

                            <Button
                                href="https://api.whatsapp.com/send/?phone=6283812310368&text=Halo%20Kak,%20saya%20tertarik%20daftar%20program%20Intensive"
                                class="w-full justify-center bg-ultimate-navy text-white hover:bg-ultimate-yellow hover:text-ultimate-navy font-bold py-3.5 rounded-xl shadow-lg hover:shadow-xl transition-all"
                                target="_blank"
                            >
                                Daftar Sekarang
                            </Button>
                            <p class="text-center text-xs text-slate-400 mt-4">*Harga dapat berubah sewaktu-waktu</p>
                        </div>
                    </div>

                    <!-- Schedule Info -->
                    <div class="bg-slate-50 rounded-3xl p-6 border border-slate-200">
                        <h4 class="font-bold text-ultimate-navy mb-4 flex items-center gap-2">
                            <span class="w-8 h-8 flex items-center justify-center bg-white rounded-lg shadow-sm text-lg">ðŸ“…</span>
                            Jadwal Kelas
                        </h4>
                        <p class="text-sm text-slate-600 mb-4 leading-relaxed">Kelas baru dimulai setiap hari Senin/Minggu ke-1 & 3 setiap bulan.</p>
                        <a href="https://wa.me/6283812310368" target="_blank" class="text-ultimate-blue text-sm font-bold hover:underline flex items-center gap-1">
                            Cek Ketersediaan Slot <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </a>
                    </div>

                    <!-- Contact Card -->
                    <div class="bg-white rounded-3xl p-6 shadow-sm border border-slate-100">
