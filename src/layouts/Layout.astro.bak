    <script>
      // Header scroll effect
      const header = document.getElementById('siteHeader');
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header?.classList.add('scrolled');
        } else {
          header?.classList.remove('scrolled');
        }
      });

      // Mobile menu toggle
      const mobileToggle = document.getElementById('mobileToggle');
      const mainNav = document.getElementById('mainNav');
      const navOverlay = document.getElementById('navOverlay');

      function toggleMobileMenu() {
        mobileToggle?.classList.toggle('active');
        mainNav?.classList.toggle('active');
        navOverlay?.classList.toggle('active');
        document.body.style.overflow = mainNav?.classList.contains('active') ? 'hidden' : '';
        mobileToggle?.setAttribute('aria-expanded', mainNav?.classList.contains('active') ? 'true' : 'false');
      }

      mobileToggle?.addEventListener('click', toggleMobileMenu);
      navOverlay?.addEventListener('click', toggleMobileMenu);

      // Program dropdown mega menu
      const programsBtn = document.getElementById('programsBtn');
      const programNavItem = document.getElementById('programNavItem');
      const megaMenu = document.getElementById('megaMenu');

      programsBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        programNavItem?.classList.toggle('active');
        const isOpen = programNavItem?.classList.contains('active');
        programsBtn?.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      });

      // Mega Menu Tabs
      const tabBtns = document.querySelectorAll('.mega-tab-btn');
      const tabPanels = document.querySelectorAll('.mega-tab-panel');

      tabBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const tabId = btn.getAttribute('data-tab');
          
          // Update buttons
          tabBtns.forEach(b => {
            b.classList.remove('active');
            b.setAttribute('aria-selected', 'false');
          });
          btn.classList.add('active');
          btn.setAttribute('aria-selected', 'true');
          
          // Update panels
          tabPanels.forEach(panel => {
            panel.classList.remove('active');
            if (panel.getAttribute('data-panel') === tabId) {
              panel.classList.add('active');
            }
          });
        });
      });

      // Close mega menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!e.target.closest('.nav-item-mega') && programNavItem?.classList.contains('active')) {
          programNavItem?.classList.remove('active');
          programsBtn?.setAttribute('aria-expanded', 'false');
        }
      });

      // Close mega menu on ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          if (programNavItem?.classList.contains('active')) {
            programNavItem?.classList.remove('active');
            programsBtn?.setAttribute('aria-expanded', 'false');
          }
          if (mainNav?.classList.contains('active')) {
            toggleMobileMenu();
          }
        }
      });
    </script>
