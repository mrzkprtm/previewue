<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://www.ultimateducation.co.id/wp-content/uploads/2025/08/Group-592.webp" />
    <meta name="theme-color" content="#046bd2" />
    <link rel="icon" type="image/png" href="https://www.ultimateducation.co.id/wp-content/uploads/2025/08/cropped-Favticon-New-32x32.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style is:global>
      :root {
        /* UE Color Palette dari CSS asli */
        --ast-global-color-0: #046bd2;
        --ast-global-color-1: #045cb4;
        --ast-global-color-2: #1e293b;
        --ast-global-color-3: #334155;
        --ast-global-color-4: #FFFFFF;
        --ast-global-color-5: #F0F5FA;
        --ast-global-color-6: #111111;
        --ast-global-color-7: #D1D5DB;
        
        /* Semantic colors */
        --primary: var(--ast-global-color-0);
        --primary-dark: var(--ast-global-color-1);
        --primary-light: #e6f2ff;
        --dark: var(--ast-global-color-6);
        --text-primary: var(--ast-global-color-2);
        --text-secondary: var(--ast-global-color-3);
        --bg-light: var(--ast-global-color-5);
        --border-color: var(--ast-global-color-7);
        --white: var(--ast-global-color-4);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-size: 16px;
        line-height: 1.65;
        color: var(--text-primary);
        background: var(--white);
      }

      a {
        color: var(--primary);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--primary-dark);
      }

      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      /* ============================================
         HEADER - Sticky with shadow on scroll
         ============================================ */
      .site-header {
        background: var(--white);
        position: sticky;
        top: 0;
        z-index: 1000;
        transition: box-shadow 0.3s ease;
      }

      .site-header.scrolled {
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
      }

      .header-inner {
        max-width: 1440px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-height: 80px;
      }

      /* Logo */
      .site-logo {
        flex-shrink: 0;
      }

      .site-logo a {
        display: flex;
        align-items: center;
      }

      .site-logo img {
        height: 53px;
        width: auto;
        transition: all 0.2s linear;
      }

      /* Mobile Menu Toggle */
      .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 44px;
        height: 44px;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 10px;
        gap: 5px;
        z-index: 1001;
      }

      .mobile-menu-toggle span {
        display: block;
        width: 24px;
        height: 2px;
        background: var(--primary);
        border-radius: 2px;
        transition: all 0.3s ease;
      }

      .mobile-menu-toggle.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
      }

      .mobile-menu-toggle.active span:nth-child(2) {
        opacity: 0;
      }

      .mobile-menu-toggle.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
      }

      /* ============================================
         MAIN NAVIGATION
         ============================================ */
      .main-nav {
        display: flex;
        align-items: center;
        gap: 0;
      }

      .nav-menu {
        display: flex;
        list-style: none;
        align-items: center;
        gap: 0;
      }

      .nav-item {
        position: relative;
      }

      .nav-link {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 12px 18px;
        color: var(--text-secondary);
        font-size: 15px;
        font-weight: 500;
        border: none;
        background: none;
        cursor: pointer;
        font-family: inherit;
        transition: color 0.2s ease;
        white-space: nowrap;
        line-height: 80px;
      }

      .nav-link:hover,
      .nav-link:focus {
        color: var(--primary-dark);
      }

      .nav-link.current {
        color: var(--primary-dark);
      }

      /* Dropdown Arrow */
      .nav-arrow {
        width: 10px;
        height: 10px;
        transition: transform 0.3s ease;
      }

      .nav-item.active .nav-arrow {
        transform: rotate(180deg);
      }

      /* CTA Button in Nav */
      .nav-cta {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: var(--primary);
        color: var(--white) !important;
        padding: 15px 30px;
        border-radius: 40px;
        font-weight: 500;
        font-size: 16px;
        line-height: 1em;
        margin-left: 10px;
        transition: all 0.3s ease;
        box-shadow: 0px 1px 2px rgba(0,0,0,0.05);
      }

      .nav-cta:hover {
        background: var(--primary-dark);
        color: var(--white) !important;
      }

      /* ============================================
         MEGA MENU
         ============================================ */
      .mega-menu-wrapper {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        width: 1140px;
        background: var(--white);
        border-radius: 0 0 12px 12px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        z-index: 1000;
        padding: 0;
        border-top: 2px solid var(--primary);
      }

      .nav-item.active .mega-menu-wrapper {
        opacity: 1;
        visibility: visible;
      }

      /* Mega Menu Tabs */
      .mega-tabs {
        display: flex;
        flex-direction: column;
      }

      .mega-tabs-header {
        display: flex;
        background: var(--bg-light);
        border-bottom: 1px solid var(--border-color);
        padding: 0;
      }

      .mega-tab-btn {
        flex: 1;
        padding: 16px 20px;
        background: transparent;
        border: none;
        font-size: 14px;
        font-weight: 600;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s ease;
        border-bottom: 3px solid transparent;
        margin-bottom: -1px;
        font-family: inherit;
      }

      .mega-tab-btn:hover {
        color: var(--primary);
        background: rgba(4, 107, 210, 0.05);
      }

      .mega-tab-btn.active {
        color: var(--primary);
        background: var(--white);
        border-bottom-color: var(--primary);
      }

      /* Mega Menu Content */
      .mega-tabs-content {
        padding: 24px;
      }

      .mega-tab-panel {
        display: none;
      }

      .mega-tab-panel.active {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
      }

      /* Program Card in Mega Menu */
      .program-card {
        display: flex;
        flex-direction: column;
        padding: 16px;
        border-radius: 8px;
        background: var(--white);
        transition: all 0.3s ease;
        text-decoration: none;
        border: 1px solid transparent;
      }

      .program-card:hover {
        background: var(--bg-light);
        border-color: var(--border-color);
        transform: translateY(-2px);
      }

      .program-card-image {
        width: 100%;
        height: 100px;
        object-fit: contain;
        margin-bottom: 12px;
        border-radius: 6px;
      }

      .program-card-title {
        font-size: 15px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 6px;
      }

      .program-card-desc {
        font-size: 13px;
        color: var(--text-secondary);
        line-height: 1.5;
      }

      /* ============================================
         MAIN CONTENT
         ============================================ */
      .main-content {
        min-height: calc(100vh - 80px - 400px);
      }

      /* ============================================
         FOOTER - Sesuai style UE
         ============================================ */
      .site-footer {
        background: var(--dark);
        color: var(--white);
        padding: 60px 0 0;
        margin-top: 80px;
      }

      .footer-inner {
        max-width: 1440px;
        margin: 0 auto;
        padding: 0 20px;
      }

      .footer-main {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
        gap: 40px;
        padding-bottom: 40px;
      }

      .footer-column {
        display: flex;
        flex-direction: column;
      }

      /* Footer Logo & About */
      .footer-logo {
        margin-bottom: 20px;
      }

      .footer-logo img {
        height: 50px;
        width: auto;
        filter: brightness(0) invert(1);
      }

      .footer-about {
        color: rgba(255, 255, 255, 0.8);
        font-size: 14px;
        line-height: 1.8;
        margin-bottom: 24px;
      }

      /* Footer Social */
      .footer-social {
        display: flex;
        gap: 12px;
      }

      .footer-social a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        color: var(--white);
        transition: all 0.3s ease;
      }

      .footer-social a:hover {
        background: var(--primary);
        transform: translateY(-3px);
      }

      .footer-social svg {
        width: 18px;
        height: 18px;
        fill: currentColor;
      }

      /* Footer Column Title */
      .footer-title {
        font-size: 16px;
        font-weight: 700;
        color: var(--white);
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 12px;
      }

      .footer-title::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 30px;
        height: 2px;
        background: var(--primary);
      }

      /* Footer Links */
      .footer-links {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .footer-links a {
        color: rgba(255, 255, 255, 0.8);
        font-size: 14px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
      }

      .footer-links a::before {
        content: '›';
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s ease;
      }

      .footer-links a:hover {
        color: var(--primary);
        padding-left: 8px;
      }

      .footer-links a:hover::before {
        opacity: 1;
        transform: translateX(0);
      }

      /* Footer Contact */
      .footer-contact {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .footer-contact-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
      }

      .footer-contact-icon {
        width: 36px;
        height: 36px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
      }

      .footer-contact-icon svg {
        width: 18px;
        height: 18px;
        fill: var(--primary);
      }

      .footer-contact-text {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
      }

      .footer-contact-text strong {
        display: block;
        color: var(--white);
        font-weight: 600;
        margin-bottom: 4px;
      }

      .footer-contact-text a {
        color: var(--primary);
      }

      .footer-contact-text a:hover {
        color: #4d9fff;
      }

      /* Footer Bottom */
      .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .footer-copyright {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.6);
      }

      .footer-bottom-links {
        display: flex;
        gap: 24px;
      }

      .footer-bottom-links a {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.6);
      }

      .footer-bottom-links a:hover {
        color: var(--primary);
      }

      /* ============================================
         RESPONSIVE - Tablet & Mobile
         ============================================ */
      @media (max-width: 1200px) {
        .mega-menu-wrapper {
          width: calc(100vw - 40px);
          max-width: 1000px;
        }
      }

      @media (max-width: 992px) {
        .mobile-menu-toggle {
          display: flex;
        }

        .main-nav {
          position: fixed;
          top: 0;
          right: -100%;
          width: 320px;
          height: 100vh;
          background: var(--white);
          flex-direction: column;
          align-items: stretch;
          padding: 80px 0 20px;
          box-shadow: -10px 0 30px rgba(0, 0, 0, 0.15);
          transition: right 0.3s ease;
          overflow-y: auto;
          z-index: 999;
        }

        .main-nav.active {
          right: 0;
        }

        .nav-menu {
          flex-direction: column;
          width: 100%;
          gap: 0;
        }

        .nav-item {
          width: 100%;
          border-bottom: 1px solid var(--border-color);
        }

        .nav-link {
          justify-content: space-between;
          padding: 16px 20px;
          line-height: 1.5;
          width: 100%;
        }

        .nav-cta {
          margin: 20px;
          width: calc(100% - 40px);
          justify-content: center;
        }

        .mega-menu-wrapper {
          position: static;
          width: 100%;
          transform: none;
          box-shadow: none;
          border-radius: 0;
          max-height: 0;
          overflow: hidden;
          opacity: 1;
          visibility: visible;
          border-top: none;
          transition: max-height 0.3s ease;
        }

        .nav-item.active .mega-menu-wrapper {
          max-height: 2000px;
        }

        .mega-tabs-header {
          flex-wrap: wrap;
        }

        .mega-tab-btn {
          flex: 0 0 50%;
          padding: 12px 10px;
          font-size: 12px;
        }

        .mega-tab-panel.active {
          grid-template-columns: 1fr 1fr;
        }

        .footer-main {
          grid-template-columns: 1fr 1fr;
          gap: 30px;
        }
      }

      @media (max-width: 640px) {
        .header-inner {
          min-height: 70px;
          padding: 0 16px;
        }

        .site-logo img {
          height: 40px;
        }

        .mega-tab-panel.active {
          grid-template-columns: 1fr;
        }

        .footer-main {
          grid-template-columns: 1fr;
          gap: 30px;
        }

        .footer-bottom {
          flex-direction: column;
          gap: 16px;
          text-align: center;
        }
      }

      /* Mobile overlay */
      .nav-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        z-index: 998;
      }

      .nav-overlay.active {
        opacity: 1;
        visibility: visible;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header class="site-header" id="siteHeader">
      <div class="header-inner">
        <!-- Logo -->
        <div class="site-logo">
          <a href="/">
            <img 
              src="https://www.ultimateducation.co.id/wp-content/uploads/2024/02/ue-logo-top.jpg" 
              alt="Ultimate Education Logo"
              width="200"
              height="53"
            />
          </a>
        </div>

        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-toggle" id="mobileToggle" aria-label="Toggle menu" aria-expanded="false">
          <span></span>
          <span></span>
          <span></span>
        </button>

        <!-- Navigation -->
        <nav class="main-nav" id="mainNav" aria-label="Main navigation">
          <ul class="nav-menu">
            <li class="nav-item">
