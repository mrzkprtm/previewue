---
/**
 * OWNER: STATIC (Dev A)
 * Global layout wrapper.
 */
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A modern Astro + WordPress site" } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 md:px-6 xl:px-0 h-16 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-blue-600">MySite</a>
        <nav class="flex gap-4">
          <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
          <a href="/artikel" class="text-gray-600 hover:text-gray-900">Blog</a>
        </nav>
      </div>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-gray-50 border-t border-gray-200 mt-12">
      <div class="max-w-7xl mx-auto px-4 md:px-6 xl:px-0 py-12 text-center text-gray-400 text-sm md:text-base">
        &copy; {new Date().getFullYear()} MySite. Built with Astro & WordPress.
      </div>
    </footer>
  </body>
</html>
