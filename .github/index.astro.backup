<Layout title="Kursus Persiapan IELTS, SAT, GRE & GMAT - Ultimate Education" description="Platform edukasi terkemuka untuk persiapan IELTS, SAT, GRE, GMAT, dan program beasiswa impian Anda.">
  <section class="hero">
    <!-- SVG Decorative Elements -->
    <div class="hero-decor">
      <svg class="decor-circle-1" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <circle cx="100" cy="100" r="80" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="2"></circle>
        <circle cx="100" cy="100" r="60" fill="none" stroke="rgba(255,255,255,0.08)" stroke-width="2"></circle>
        <circle cx="100" cy="100" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="2"></circle>
      </svg>
      <svg class="decor-dots" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <circle cx="10" cy="10" r="3" fill="rgba(255,255,255,0.2)"></circle>
        <circle cx="30" cy="25" r="2" fill="rgba(255,255,255,0.15)"></circle>
        <circle cx="50" cy="10" r="4" fill="rgba(255,255,255,0.1)"></circle>
        <circle cx="70" cy="30" r="3" fill="rgba(255,255,255,0.2)"></circle>
        <circle cx="90" cy="15" r="2" fill="rgba(255,255,255,0.15)"></circle>
        <circle cx="20" cy="50" r="3" fill="rgba(255,255,255,0.1)"></circle>
        <circle cx="60" cy="60" r="2" fill="rgba(255,255,255,0.2)"></circle>
        <circle cx="80" cy="50" r="4" fill="rgba(255,255,255,0.15)"></circle>
      </svg>
      <svg class="decor-wave" viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg">
        <path
          fill="rgba(255,255,255,0.03)"
          d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,144C672,139,768,181,864,197.3C960,213,1056,203,1152,181.3C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path>
      </svg>
      <svg class="decor-grad-line" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="lineGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:rgba(255,255,255,0.2)"></stop>
            <stop offset="100%" style="stop-color:rgba(255,255,255,0)"></stop>
          </linearGradient>
        </defs>
        <path d="M50,200 Q200,50 350,200" fill="none" stroke="url(#lineGrad)" stroke-width="2"></path>
        <path d="M50,250 Q200,100 350,250" fill="none" stroke="url(#lineGrad)" stroke-width="1.5"></path>
      </svg>
    </div>

    <div class="hero-container">
      <div class="hero-content">
        <div class="hero-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#FFD700"></path>
          </svg>
          <span>Trusted by 10,000+ Students</span>
        </div>
        <h1>Kursus Persiapan <span class="gradient-text">IELTS, SAT, GRE & GMAT</span> untuk tingkatkan peluang kuliah di luar negri</h1>

        <div class="hero-features">
          <div class="feature-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="#4ADE80" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ></path>
            </svg>
            <span>Native Speakers</span>
          </div>
          <div class="feature-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="#4ADE80" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ></path>
            </svg>
            <span>Garansi Skor</span>
          </div>
          <div class="feature-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="#4ADE80" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              ></path>
            </svg>
            <span>Kelas Online & Offline</span>
          </div>
        </div>

        <div class="lead-form-card">
          <h3>Dapatkan <span class="highlight">Penawaran Spesial</span>!</h3>
          <form class="lead-form" id="leadForm">
            <div class="form-row">
              <div class="form-group">
                <label for="whatsapp">Nomor Whatsapp*</label>
                <div class="input-group">
                  <span class="input-prefix">+62</span>
                  <input type="tel" id="whatsapp" name="whatsapp" placeholder="8123456789" required />
                </div>
              </div>
              <div class="form-group">
                <label for="program">Program Pilihan*</label>
                <select id="program" name="program" required>
                  <option value="" disabled selected>Pilih Program</option>
                  {
                    programOptions.map((opt) => (
                      <option value={opt}>{opt}</option>
                    ))
                  }
                </select>
              </div>
            </div>
            <button type="submit" class="btn-submit">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M22 2L11 13M22 2L15 22L11 13M22 2L2 9L11 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
              Dapatkan Penawaran!
            </button>
          </form>
        </div>
      </div>

      <div class="hero-visual">
        <div class="hero-image-container">
          <img src="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=600&h=500&fit=crop" alt="Students studying" class="hero-image" />
          <div class="floating-card card-score">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M9 12L11 14L15 10M12 3L13.9101 4.87147L16.5 4.20577L17.2184 6.78155L19.7942 7.5L19.1285 10.0899L21 12L19.1285 13.9101L19.7942 16.5L17.2184 17.2184L16.5 19.7942L13.9101 19.1285L12 21L10.0899 19.1285L7.5 19.7942L6.78155 17.2184L4.20577 16.5L4.87147 13.9101L3 12L4.87147 10.0899L4.20577 7.5L6.78155 6.78155L7.5 4.20577L10.0899 4.87147L12 3Z"
                fill="#145DA0"
                stroke="#145DA0"
                stroke-width="2"></path>
            </svg>
            <div>
              <strong>IELTS 8.0</strong>
              <span>Achieved!</span>
            </div>
          </div>
          <div class="floating-card card-students">
            <div class="student-avatars">
              <img src="https://i.pravatar.cc/40?img=1" alt="Student" />
              <img src="https://i.pravatar.cc/40?img=2" alt="Student" />
              <img src="https://i.pravatar.cc/40?img=3" alt="Student" />
            </div>
            <div>
              <strong>10,000+</strong>
              <span>Happy Students</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Partners inside hero -->
    <div class="partners-wrapper">
      <div class="partners">
        <div class="partners-track-wrapper">
          <div class="partners-track">
            {
              partners.map((partner) => (
                <div class="partner-logo">
                  <img src={partner.logo} alt={partner.name} />
                </div>
              ))
            }
          </div>
          <div class="partners-track">
            {
              partners.map((partner) => (
                <div class="partner-logo">
                  <img src={partner.logo} alt={partner.name} />
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

