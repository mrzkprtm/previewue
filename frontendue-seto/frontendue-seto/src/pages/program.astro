---
import Layout from "../layouts/Layout.astro";
import ProgramHero from "../components/programs/ProgramHero.astro";
import ProgramFeatured from "../components/programs/ProgramFeatured.astro";
import ProgramList from "../components/programs/ProgramList.astro";
import ProgramCTA from "../components/programs/ProgramCTA.astro";
---

<Layout
  title="Temukan Program Persiapan Terbaikmu - Ultimate Education"
  description="Jelajahi berbagai program bimbingan belajar intensif untuk IELTS, TOEFL, SAT, GRE, dan GMAT dengan mentor berpengalaman."
>
  <main
    class="flex-grow bg-slate-50 dark:bg-slate-900 transition-colors duration-300"
  >
    <!-- Hero Section -->
    <ProgramHero />

    <!-- Featured Program Section -->
    <ProgramFeatured />

    <!-- Program Selection Section -->
    <ProgramList />

    <!-- Success CTA Section -->
    <ProgramCTA />
  </main>
</Layout>
