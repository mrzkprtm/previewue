<section class="py-20 bg-slate-50 dark:bg-slate-900" id="contact-form">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="bg-white dark:bg-slate-800 rounded-3xl shadow-2xl overflow-hidden"
        >
            <div class="grid grid-cols-1 md:grid-cols-2">
                <div
                    class="bg-hero-gradient p-10 flex flex-col justify-center text-white relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 right-0 w-64 h-64 bg-ultimate-blue/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
                    >
                    </div>
                    <div
                        class="absolute bottom-0 left-0 w-48 h-48 bg-ultimate-yellow/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"
                    >
                    </div>
                    <div class="relative z-10">
                        <h2
                            class="text-2xl md:text-3xl font-bold font-heading mb-6"
                        >
                            Cari tahu pilihan program yang cocok untuk Anda
                        </h2>
                        <p class="text-slate-300 mb-8">
                            Diskusikan kebutuhan perusahaan atau institusi Anda
                            dengan tim konsultan kami.
                        </p>
                        <ul class="space-y-4 text-sm text-slate-300">
                            <li class="flex items-center gap-3">
                                <span
                                    class="material-symbols-outlined text-ultimate-yellow"
                                    >email</span
                                >
                                <span>partners@ultimateeducation.id</span>
                            </li>
                            <li class="flex items-center gap-3">
                                <span
                                    class="material-symbols-outlined text-ultimate-yellow"
                                    >call</span
                                >
                                <span>(021) 50913616</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="p-10">
                    <form class="space-y-5">
                        <div>
                            <label
                                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1"
                                >Nama Lengkap</label
                            >
                            <input
                                class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-ultimate-blue focus:border-transparent outline-none transition-all"
                                placeholder="Nama Anda"
                                type="text"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1"
                                >Nama Perusahaan/Institusi</label
                            >
                            <input
                                class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-ultimate-blue focus:border-transparent outline-none transition-all"
                                placeholder="Nama Institusi"
                                type="text"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1"
                                >Email Kantor</label
                            >
                            <input
                                class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-ultimate-blue focus:border-transparent outline-none transition-all"
                                placeholder="email@perusahaan.com"
                                type="email"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1"
                                >Nomor Telepon / WhatsApp</label
                            >
                            <input
                                class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-700 text-slate-900 dark:text-white focus:ring-2 focus:ring-ultimate-blue focus:border-transparent outline-none transition-all"
                                placeholder="0812..."
                                type="tel"
                            />
                        </div>
                        <button
                            class="w-full py-3 bg-ultimate-yellow text-ultimate-navy font-bold rounded-lg hover:bg-yellow-500 transition-all shadow-md mt-4"
                            type="button"
                        >
                            Dapatkan Penawaran Menarik
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
