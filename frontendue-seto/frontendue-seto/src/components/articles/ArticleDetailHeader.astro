---
interface Props {
    title: string;
    category: string;
    date: string;
    readTime?: string;
    author: {
        name: string;
        role: string;
        image: string;
    };
}

const {
    title,
    category,
    date,
    readTime = "8 Menit Baca",
    author,
} = Astro.props;
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
    <nav class="flex mb-6 text-sm text-slate-500 dark:text-slate-400">
        <ol class="flex items-center space-x-2">
            <li>
                <a class="hover:text-ultimate-blue transition-colors" href="/"
                    >Home</a>
            </li>
            <li><span class="mx-2">/</span></li>
            <li>
                <a
                    class="hover:text-ultimate-blue transition-colors"
                    href="/artikel">Blog</a>
            </li>
            <li><span class="mx-2">/</span></li>
            <li>
                <span
                    class="text-ultimate-navy dark:text-ultimate-yellow font-medium"
                    >{category}</span>
            </li>
        </ol>
    </nav>
    <div class="flex flex-col gap-6">
        <h1
            class="font-heading font-bold text-3xl md:text-5xl text-ultimate-navy dark:text-white leading-tight max-w-4xl"
        >
            {title}
        </h1>
        <div
            class="flex items-center gap-6 text-sm text-slate-500 dark:text-slate-400 border-b border-slate-200 dark:border-slate-700 pb-8"
        >
            <div class="flex items-center gap-2">
                <div
                    class="w-10 h-10 rounded-full overflow-hidden bg-slate-200"
                >
                    <img
                        alt={author.name}
                        class="w-full h-full object-cover"
                        src={author.image}
                    />
                </div>
                <div>
                    <p class="font-semibold text-ultimate-navy dark:text-white">
                        {author.name}
                    </p>
                    <p class="text-xs">{author.role}</p>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined text-[18px]"
                    >calendar_today</span
                >
                <span>{date}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined text-[18px]"
                    >schedule</span
                >
                <span>{readTime}</span>
            </div>
        </div>
    </div>
</div>
